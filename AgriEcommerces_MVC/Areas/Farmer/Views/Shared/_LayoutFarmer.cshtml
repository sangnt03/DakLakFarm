<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – Farmer</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='48' fill='%232d8b57'/%3E%3Cpath d='M50 30c-8 0-15 7-15 15v10h30V45c0-8-7-15-15-15zM45 55h10v15H45z' fill='%23fff'/%3E%3C/svg%3E" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin="" href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;700&amp;family=Open+Sans:ital,wght@0,400;0,700;1,400;1,700&amp;display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    <style>
        :root {
            /*--- Color Palette ---*/
            --primary-green: #16a34a; /* Green 600 - Main Primary Color */
            --primary-green-light: #dcfce7; /* Green 100 - Light Backgrounds/Hover */
            --secondary-yellow: #eab308; /* Yellow 500 - Accent Color */
            --secondary-yellow-light: #fef9c3; /* Yellow 100 - Light Accents */

            --bg-white: #ffffff; /* Pure White */
            --bg-light: #f8fafc; /* Slate 50 - Main Background */
            --border-color: #e2e8f0; /* Slate 200 - Borders */

            --text-while: #ffffff; /* Slate 800 - Main Text */
            --text-dark: #1e293b; /* Slate 900 - Primary Text */
            --text-muted: #64748b; /* Slate 500 - Secondary Text */
            --text-light: #94a3b8; /* Slate 400 - Placeholder/Disabled */
            /*--- Layout Dimensions ---*/
            --sidebar-width: 260px;
            --topbar-height: 64px; /* Slightly taller for better spacing */
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
            background: var(--bg-light);
            color: var(--text-dark);
            overflow-x: hidden;
        }

        /*--- Sidebar ---*/
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: var(--sidebar-width);
            height: 100vh;
            background: var(--bg-white);
            border-right: 1px solid var(--border-color);
            z-index: 1000;
            transition: all 0.3s ease-in-out;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
        }

        .sidebar-brand {
            height: var(--topbar-height);
            padding: 0 24px;
            display: flex;
            align-items: center;
            gap: 12px;
            background: linear-gradient(135deg, #00BB00 100%);

            
        }

        .sidebar-brand-icon {
            width: 36px;
            height: 36px;
            background: var(--primary-green-light);
            color: var(--primary-green);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }

        .sidebar-brand-text {
            color: var(--text-while);
            font-size: 18px;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .sidebar-menu {
            padding: 24px 16px;
            flex-grow: 1;
        }

        .sidebar-menu-item {
            list-style: none;
            margin-bottom: 4px;
        }

        .sidebar-menu-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 10px 16px;
            color: var(--text-muted);
            text-decoration: none;
            transition: all 0.2s ease;
            border-radius: 8px;
            font-weight: 500;
            font-size: 14px;
        }

            .sidebar-menu-link:hover {
                background: var(--bg-light);
                color: var(--primary-green);
            }

            .sidebar-menu-link.active {
                background: var(--primary-green-light);
                color: var(--primary-green);
            }

        .sidebar-menu-icon {
            width: 20px;
            text-align: center;
            font-size: 16px;
        }

        /*--- Topbar ---*/
        .topbar {
            position: fixed;
            top: 0;
            left: var(--sidebar-width);
            right: 0;
            height: var(--topbar-height);
            background: var(--bg-white); /* Keep white, or use slightly off-white if preferred */
            border-bottom: 1px solid var(--border-color);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            z-index: 999;
            transition: left 0.3s ease-in-out;
        }

        .topbar-toggle {
            display: none; /* Hidden on desktop */
            background: transparent;
            border: none;
            font-size: 20px;
            color: var(--text-muted);
            cursor: pointer;
            padding: 8px;
        }

        .topbar-search {
            flex: 1;
            max-width: 320px;
            position: relative;
        }

            .topbar-search input {
                width: 100%;
                padding: 10px 16px 10px 44px;
                background: var(--bg-light);
                border: 1px solid transparent;
                border-radius: 10px;
                font-size: 14px;
                color: var(--text-dark);
                transition: all 0.2s;
            }

                .topbar-search input:focus {
                    background: var(--bg-white);
                    border-color: var(--primary-green);
                    outline: none;
                    box-shadow: 0 0 0 3px var(--primary-green-light);
                }

            .topbar-search i {
                position: absolute;
                left: 16px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--text-light);
            }

        .topbar-right {
            display: flex;
            align-items: center;
            gap: 16px;
        }

        .topbar-user {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            padding: 6px 10px;
            border-radius: 8px;
            transition: background 0.2s;
            border: 1px solid transparent;
        }

            .topbar-user:hover {
                background: var(--bg-light);
                border-color: var(--border-color);
            }

        .topbar-user-avatar {
            width: 38px;
            height: 38px;
            border-radius: 10px; /* Slightly squarer avatar */
            object-fit: cover;
            background: var(--secondary-yellow-light); /* Placeholder background */
            border: 2px solid var(--bg-white);
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

        .topbar-user-info {
            display: flex;
            flex-direction: column;
            line-height: 1.3;
        }

        .topbar-user-name {
            font-size: 14px;
            font-weight: 600;
            color: var(--text-dark);
        }

        .topbar-user-role {
            font-size: 12px;
            color: var(--primary-green); /* Highlight role with green */
            font-weight: 500;
        }

        /*--- Main Content ---*/
        .main-content {
            margin-left: var(--sidebar-width);
            margin-top: var(--topbar-height);
            padding: 32px;
            min-height: calc(100vh - var(--topbar-height));
            transition: margin-left 0.3s ease-in-out;
        }

        /*--- Helpers & Components ---*/
        .card {
            background: var(--bg-white);
            border: 1px solid var(--border-color);
            border-radius: 16px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03);
        }

        .dropdown-menu {
            border: 1px solid var(--border-color);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.025);
            border-radius: 12px;
            padding: 8px;
        }

        .dropdown-item {
            border-radius: 6px;
            padding: 8px 12px;
            font-size: 14px;
            color: var(--text-dark);
        }

            .dropdown-item:hover, .dropdown-item:focus {
                background-color: var(--bg-light);
                color: var(--primary-green);
            }

            .dropdown-item.active, .dropdown-item:active {
                background-color: var(--primary-green);
                color: var(--bg-white);
            }

        /*--- Mobile Responsive ---*/
        @@media (max-width: 991.98px) { /* Adjusted breakpoint for tablets */
            .sidebar

        {
            left: calc(-1 * var(--sidebar-width));
        }

        .sidebar.active {
            left: 0;
            box-shadow: 5px 0 25px rgba(0,0,0,0.1);
        }

        .topbar {
            left: 0;
            padding: 0 16px;
        }

        .topbar-toggle {
            display: block;
            margin-right: 12px;
        }

        .main-content {
            margin-left: 0;
            padding: 20px;
        }

        .topbar-search {
            display: none; /* Hide search on smaller screens, or make it expandable */
        }

        }

        .sidebar-overlay {
            display: none;
            position: fixed;
            inset: 0;
            background: rgba(30, 41, 59, 0.4); /* Darker overlay */
            backdrop-filter: blur(2px);
            z-index: 998;
            opacity: 0;
            transition: opacity 0.3s ease-in-out;
        }

            .sidebar-overlay.active {
                display: block;
                opacity: 1;
            }
    </style>
</head>
<body>

    <aside class="sidebar" id="sidebar">
        <div class="sidebar-brand">
            <div class="sidebar-brand-text">Farmer Management</div>
        </div>

        <ul class="sidebar-menu">
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link active" asp-area="Farmer" asp-controller="FarmerDashboard" asp-action="Index">
                    <i class="fas fa-home sidebar-menu-icon"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link" asp-area="Farmer" asp-controller="KetQuaDuDoan" asp-action="Index">
                    <i class="fas fa-chart-line sidebar-menu-icon"></i>
                    <span>Dự đoán giá</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link" asp-area="Farmer" asp-controller="ProductManagement" asp-action="Index">
                    <i class="fas fa-box sidebar-menu-icon"></i>
                    <span>Quản lý sản phẩm</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link" asp-area="Farmer" asp-controller="OrdersManagement" asp-action="Index">
                    <i class="fas fa-shopping-cart sidebar-menu-icon"></i>
                    <span>Quản lý đơn hàng</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link" asp-area="Farmer" asp-controller="Wallet" asp-action="Index">
                    <i class="fas fa-wallet sidebar-menu-icon"></i>
                    <span>Ví của tôi</span>
                </a>
            </li>
            <li class="sidebar-menu-item">
                <a class="sidebar-menu-link" asp-area="Farmer" asp-controller="ChatShop" asp-action="Index">
                    <i class="fas fa-comments sidebar-menu-icon"></i>
                    <span>Tin nhắn</span>
                </a>
            </li>
        </ul>

    </aside>

    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <nav class="topbar">
        <div class="d-flex align-items-center">
            <button class="topbar-toggle" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>

            <div class="topbar-search d-none d-md-block">
                <i class="fas fa-search"></i>
                <input type="text" placeholder="Tìm kiếm...">
            </div>
        </div>

        <div class="topbar-right">
            <div class="dropdown">
                <div class="topbar-user" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="@(Url.Content("~/images/LogoInformation.jpg"))" alt="User" class="topbar-user-avatar">
                    <div class="topbar-user-info d-none d-sm-flex">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="topbar-user-name">@User.Identity.Name</div>
                            <div class="topbar-user-role">Nông dân</div>
                        }
                        else
                        {
                            <div class="topbar-user-name">Khách</div>
                            <div class="topbar-user-role">Chưa đăng nhập</div>
                        }
                    </div>
                    <i class="fas fa-chevron-down ms-2 text-muted" style="font-size: 12px;"></i>
                </div>

                <ul class="dropdown-menu dropdown-menu-end animate slideIn">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>
                            <a class="dropdown-item" asp-area="Farmer" asp-controller="FarmerAccount" asp-action="Login">
                                <i class="fas fa-sign-in-alt me-2 opacity-50"></i> Đăng nhập
                            </a>
                        </li>
                    }
                    else
                    {
                        <li><h6 class="dropdown-header">Tài khoản của tôi</h6></li>
                        <li><a class="dropdown-item" href="#"><i class="far fa-user me-2 opacity-50"></i> Hồ sơ cá nhân</a></li>
                        <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2 opacity-50"></i> Cài đặt</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-area="Farmer" asp-controller="FarmerAccount" asp-action="Logout" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="dropdown-item text-danger">
                                    <i class="fas fa-sign-out-alt me-2 opacity-50"></i> Đăng xuất
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function() {
            // Toggle sidebar on mobile
            const $sidebar = $('#sidebar');
            const $sidebarOverlay = $('#sidebarOverlay');

            $('#sidebarToggle').on('click', function() {
                $sidebar.addClass('active');
                $sidebarOverlay.addClass('active');
                $('body').css('overflow', 'hidden'); // Prevent background scrolling
            });

            $sidebarOverlay.on('click', function() {
                $sidebar.removeClass('active');
                $(this).removeClass('active');
                $('body').css('overflow', '');
            });

            // Active menu highlight (Simple version based on URL)
            const currentPath = window.location.pathname.toLowerCase();
            $('.sidebar-menu-link').each(function() {
                const linkPath = $(this).attr('href').toLowerCase();
                 // Check if current path starts with link path to handle sub-pages if needed,
                 // or strict equality for exact matches. Adjust as necessary for your routing.
                if (currentPath === linkPath || (linkPath !== '/' && currentPath.startsWith(linkPath))) {
                    $('.sidebar-menu-link').removeClass('active');
                    $(this).addClass('active');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Styles", required: false)

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>