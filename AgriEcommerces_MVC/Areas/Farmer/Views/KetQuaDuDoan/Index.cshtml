@model AgriEcommerces_MVC.Areas.Farmer.ViewModel.DuDoanViewModel
@{
    ViewData["Title"] = "Dự đoán giá nông sản";
}


<div class="prediction-container">
    <div class="prediction-header">
        <h2 class="prediction-title">
            @ViewData["Title"]
        </h2>
        <p class="prediction-subtitle">Dự báo giá cả nông sản chính xác và tin cậy</p>
    </div>

    <div class="form-card">
        <form method="get">
            <div class="form-group">
                <label for="predictDate" class="form-label">📅 Chọn ngày dự đoán:</label>
                <select id="predictDate" name="predictDate" class="form-select" required>
                    @removeTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
                    @if (Model.FutureDates != null && Model.FutureDates.Any())
                    {
                        foreach (var date in Model.FutureDates)
                        {
                            var dateString = date.ToString("yyyy-MM-dd");
                            var selectedAttr = Model.SelectedDate == dateString ? "selected=\"selected\"" : "";
                            <option value="@dateString" @Html.Raw(selectedAttr)>@date.ToString("dd/MM/yyyy")</option>
                        }
                    }
                    else
                    {
                        <option value="">Không có ngày nào để chọn</option>
                    }
                </select>
            </div>

            <button type="submit" class="btn-predict">
                🔮 Xem dự đoán
            </button>
        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.SelectedDate))
    {
        DateTime parsedDate;
        if (DateTime.TryParse(Model.SelectedDate, out parsedDate))
        {
            <div class="status-card">
                <p class="status-success">✅ Đã dự đoán cho ngày @parsedDate.ToString("dd/MM/yyyy")</p>
            </div>
        }
    }

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="status-card status-error">
            <p>❌ @ViewBag.ErrorMessage</p>
        </div>
    }

    <div class="table-card">
        <div class="table-container">
            <table class="prediction-table">
                <thead>
                    <tr>
                        <th>📅 Ngày</th>
                        <th>🌾 Loại</th>
                        <th>📍 Khu vực</th>
                        <th>💰 Giá dự đoán</th>
                        <th>📏 Đơn vị</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Predictions != null && Model.Predictions.Any())
                    {
                        foreach (var item in Model.Predictions)
                        {
                            <tr>
                                <td class="date-cell">@item.Ngay.ToString("dd/MM/yyyy")</td>
                                <td class="type-cell">@item.Loai</td>
                                <td>@item.KhuVuc</td>
                                <td class="price-cell">@item.Gia.ToString("N0") VNĐ</td>
                                <td>@item.DonVi</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="no-data-row">
                                <span class="no-data-icon">📊</span>
                                <strong>Không có dữ liệu dự đoán</strong><br>
                                <small>Vui lòng chọn ngày khác để xem dự đoán</small>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    .prediction-container {
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        min-height: 100vh;
        padding: 30px 20px;
    }

    .prediction-header {
        background: rgba(15, 23, 42, 0.95);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 20px;
        padding: 40px;
        margin-bottom: 30px;
        text-align: center;
        position: relative;
        overflow: hidden;
    }

    .prediction-header::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #22c55e, #16a34a, #15803d);
    }

    .prediction-title {
        color: #22c55e;
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        text-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
    }

    .prediction-subtitle {
        color: #94a3b8;
        margin-top: 10px;
        font-size: 1.1rem;
    }

    .form-card {
        background: rgba(30, 41, 59, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 16px;
        padding: 30px;
        margin-bottom: 30px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        color: #22c55e;
        font-weight: 600;
        font-size: 1.1rem;
        margin-bottom: 15px;
        text-align: center;
    }

    .form-select {
        width: 100%;
        max-width: 350px;
        margin: 0 auto;
        display: block;
        background: rgba(15, 23, 42, 0.8);
        border: 2px solid rgba(34, 197, 94, 0.3);
        border-radius: 12px;
        color: #e2e8f0;
        padding: 15px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

    .form-select:focus {
        background: rgba(15, 23, 42, 0.95);
        border-color: #22c55e;
        box-shadow: 0 0 0 0.2rem rgba(34, 197, 94, 0.25);
        color: #ffffff;
        outline: none;
    }

    .form-select option {
        background: #1e293b;
        color: #e2e8f0;
    }

    .btn-predict {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        padding: 15px 40px;
        font-size: 16px;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        display: block;
        margin: 0 auto;
        cursor: pointer;
    }

    .btn-predict:hover {
        background: linear-gradient(135deg, #16a34a 0%, #15803d 100%);
        transform: translateY(-3px);
        box-shadow: 0 10px 25px rgba(34, 197, 94, 0.4);
    }

    .status-card {
        background: rgba(34, 197, 94, 0.1);
        border: 1px solid rgba(34, 197, 94, 0.3);
        border-radius: 12px;
        padding: 20px;
        margin-bottom: 30px;
        text-align: center;
        border-left: 4px solid #22c55e;
    }

    .status-success {
        color: #22c55e;
        font-weight: 600;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .status-error {
        background: rgba(239, 68, 68, 0.1);
        border-color: rgba(239, 68, 68, 0.3);
        border-left-color: #ef4444;
        color: #ef4444;
    }

    .table-card {
        background: rgba(30, 41, 59, 0.9);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(34, 197, 94, 0.2);
        border-radius: 16px;
        padding: 30px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        overflow: hidden;
    }

    .table-container {
        overflow-x: auto;
        border-radius: 12px;
        border: 1px solid rgba(34, 197, 94, 0.2);
    }

    .prediction-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 14px;
    }

    .prediction-table thead {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    }

    .prediction-table th {
        color: white;
        font-weight: 600;
        padding: 18px 15px;
        text-align: left;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 13px;
        border: none;
    }

    .prediction-table tbody tr {
        background: rgba(15, 23, 42, 0.6);
        transition: all 0.3s ease;
        border-bottom: 1px solid rgba(34, 197, 94, 0.1);
    }

    .prediction-table tbody tr:hover {
        background: rgba(34, 197, 94, 0.1);
        transform: scale(1.01);
    }

    .prediction-table tbody tr:nth-child(even) {
        background: rgba(15, 23, 42, 0.8);
    }

    .prediction-table tbody tr:nth-child(even):hover {
        background: rgba(34, 197, 94, 0.15);
    }

    .prediction-table td {
        color: #e2e8f0;
        padding: 16px 15px;
        border: none;
    }

    .price-cell {
        color: #22c55e;
        font-weight: 700;
        font-size: 15px;
    }

    .date-cell {
        color: #60a5fa;
        font-weight: 600;
    }

    .type-cell {
        color: #fbbf24;
        font-weight: 600;
    }

    .no-data-row {
        text-align: center;
        color: #94a3b8;
        font-style: italic;
        padding: 40px !important;
        background: rgba(15, 23, 42, 0.4) !important;
    }

    .no-data-icon {
        font-size: 2rem;
        margin-bottom: 10px;
        display: block;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            opacity: 1;
        }
        50% {
            opacity: 0.7;
        }
    }

    .prediction-header,
    .form-card,
    .status-card,
    .table-card {
        animation: fadeInUp 0.6s ease-out;
    }

    .form-card {
        animation-delay: 0.1s;
    }

    .status-card {
        animation-delay: 0.2s;
    }

    .table-card {
        animation-delay: 0.3s;
    }

    .prediction-title::before {
        content: '📈';
        animation: pulse 2s infinite;
    }

    @@media (max-width: 768px) {
        .prediction-container {
            padding: 20px 15px;
        }

        .prediction-title {
            font-size: 1.8rem;
            flex-direction: column;
            gap: 10px;
        }

        .prediction-header,
        .form-card,
        .table-card {
            padding: 20px;
        }

        .prediction-table th,
        .prediction-table td {
            padding: 12px 8px;
            font-size: 12px;
        }

        .prediction-table th {
            font-size: 11px;
        }
    }

    @@media (max-width: 480px) {
        .prediction-table {
            font-size: 11px;
        }

        .prediction-table th,
        .prediction-table td {
            padding: 8px 6px;
        }
    }
</style>
