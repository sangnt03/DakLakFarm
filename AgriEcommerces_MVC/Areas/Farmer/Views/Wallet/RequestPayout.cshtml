@{
    ViewData["Title"] = "Yêu cầu rút tiền";
    var balance = (decimal)ViewBag.Balance;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Yêu cầu rút tiền</h4>
                </div>
                <div class="card-body">
                    <!-- Hiển thị số dư -->
                    <div class="alert alert-info">
                        <strong>Số dư khả dụng:</strong> @balance.ToString("N0") đ
                    </div>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger">@TempData["Error"]</div>
                    }

                    <form asp-action="RequestPayout" method="post">
                        <!-- Số tiền rút -->
                        <div class="mb-3">
                            <label for="amount" class="form-label">Số tiền muốn rút <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="amount" name="amount"
                                   min="100000" max="@balance" step="10000" required>
                            <small class="form-text text-muted">Số tiền tối thiểu: 100.000đ</small>
                        </div>

                        <!-- Thông tin ngân hàng -->
                        <div class="mb-3">
                            <label for="bankName" class="form-label">Tên ngân hàng <span class="text-danger">*</span></label>
                            <select class="form-select" id="bankName" name="bankName" required>
                                <option value="">-- Chọn ngân hàng --</option>
                                <option value="Vietcombank">Vietcombank</option>
                                <option value="VietinBank">VietinBank</option>
                                <option value="BIDV">BIDV</option>
                                <option value="Agribank">Agribank</option>
                                <option value="Techcombank">Techcombank</option>
                                <option value="MB Bank">MB Bank</option>
                                <option value="ACB">ACB</option>
                                <option value="Sacombank">Sacombank</option>
                                <option value="VPBank">VPBank</option>
                                <option value="TPBank">TPBank</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="accountNumber" class="form-label">Số tài khoản <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="accountNumber" name="accountNumber"
                                   pattern="[0-9]+" required>
                        </div>

                        <div class="mb-3">
                            <label for="accountName" class="form-label">Tên chủ tài khoản <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="accountName" name="accountName"
                                   style="text-transform: uppercase;" required>
                            <small class="form-text text-muted">Nhập chính xác như trên tài khoản ngân hàng</small>
                        </div>

                        <!-- Lưu ý -->
                        <div class="alert alert-warning">
                            <strong>Lưu ý:</strong>
                            <ul class="mb-0">
                                <li>Yêu cầu rút tiền sẽ được Admin xét duyệt trong vòng 1-3 ngày làm việc</li>
                                <li>Vui lòng kiểm tra kỹ thông tin ngân hàng trước khi gửi</li>
                                <li>Bạn chỉ có thể tạo 1 yêu cầu rút tiền tại một thời điểm</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
                            <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>