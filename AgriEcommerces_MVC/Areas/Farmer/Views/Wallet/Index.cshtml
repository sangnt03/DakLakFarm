@{
    ViewData["Title"] = "Ví của tôi";
    var balance = (decimal)ViewBag.Balance;
    var transactions = (List<AgriEcommerces_MVC.Models.WalletTransaction>)ViewBag.Transactions;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Farmer" asp-controller="FarmerDashboard" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Ví của tôi</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-wallet2"></i> Quản lý Ví</h2>
        <a asp-action="PayoutHistory" class="btn btn-outline-primary">
            <i class="bi bi-clock-history"></i> Lịch sử rút tiền
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Số dư khả dụng -->
        <div class="col-md-4 mb-3">
            <div class="card bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 opacity-75">Số dư khả dụng</h6>
                            <h2 class="card-title mb-0">@balance.ToString("N0") đ</h2>
                        </div>
                        <i class="bi bi-wallet2 fs-1 opacity-50"></i>
                    </div>
                    <a asp-action="RequestPayout" class="btn btn-light btn-sm mt-3 w-100">
                        <i class="bi bi-cash-coin"></i> Rút tiền
                    </a>
                </div>
            </div>
        </div>

        <!-- Tổng doanh thu tháng này -->
        <div class="col-md-4 mb-3">
            <div class="card border-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Doanh thu tháng này</h6>
                            <h3 class="card-title text-success mb-0">
                                @{
                                    var thisMonth = transactions
                                    .Where(t => t.Type == "OrderRevenue" && t.CreateDate.Month == DateTime.Now.Month && t.CreateDate.Year == DateTime.Now.Year)
                                    .Sum(t => t.Amount);
                                }
                                @thisMonth.ToString("N0") đ
                            </h3>
                        </div>
                        <i class="bi bi-graph-up-arrow fs-1 text-success opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Số tiền đã rút -->
        <div class="col-md-4 mb-3">
            <div class="card border-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="card-subtitle mb-2 text-muted">Đã rút tháng này</h6>
                            <h3 class="card-title text-warning mb-0">
                                @{
                                    var withdrawn = Math.Abs(transactions
                                    .Where(t => t.Type == "Payout" && t.CreateDate.Month == DateTime.Now.Month && t.CreateDate.Year == DateTime.Now.Year)
                                    .Sum(t => t.Amount));
                                }
                                @withdrawn.ToString("N0") đ
                            </h3>
                        </div>
                        <i class="bi bi-arrow-down-circle fs-1 text-warning opacity-25"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Biểu đồ thu nhập (Optional - có thể thêm sau) -->
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-bar-chart"></i> Tổng quan thu nhập</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="text-muted small">Tổng doanh thu</div>
                                <div class="fs-4 fw-bold text-primary">
                                    @transactions.Where(t => t.Type == "OrderRevenue").Sum(t => t.Amount).ToString("N0") đ
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="text-muted small">Tổng đã rút</div>
                                <div class="fs-4 fw-bold text-danger">
                                    @Math.Abs(transactions.Where(t => t.Type == "Payout").Sum(t => t.Amount)).ToString("N0") đ
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="text-muted small">Số giao dịch</div>
                                <div class="fs-4 fw-bold text-info">
                                    @transactions.Count
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3">
                                <div class="text-muted small">Đơn hàng thành công</div>
                                <div class="fs-4 fw-bold text-success">
                                    @transactions.Count(t => t.Type == "OrderRevenue")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Lịch sử giao dịch -->
    <div class="card">
        <div class="card-header bg-white">
            <h5 class="mb-0"><i class="bi bi-clock-history"></i> Lịch sử giao dịch</h5>
        </div>
        <div class="card-body">
            @if (!transactions.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-3">Chưa có giao dịch nào</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Ngày giờ</th>
                                <th>Loại giao dịch</th>
                                <th>Mô tả</th>
                                <th class="text-end">Số tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tx in transactions.Take(20))
                            {
                                <tr>
                                    <td>
                                        <small class="text-muted">
                                            @tx.CreateDate.ToString("dd/MM/yyyy")
                                        </small>
                                        <br>
                                        <small class="text-muted">@tx.CreateDate.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        @switch (tx.Type)
                                        {
                                            case "OrderRevenue":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-arrow-down-circle"></i> Doanh thu
                                                </span>
                                                break;
                                            case "Payout":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-arrow-up-circle"></i> Rút tiền
                                                </span>
                                                break;
                                            case "Refund":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-arrow-counterclockwise"></i> Hoàn tiền
                                                </span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@tx.Type</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small>@tx.Description</small>
                                        @if (tx.ReferenceId.HasValue)
                                        {
                                            <br>
                                
                                            <small class="text-muted">Ref: #@tx.ReferenceId</small>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <strong class="@(tx.Amount >= 0 ? "text-success" : "text-danger")">
                                            @(tx.Amount >= 0 ? "+" : "")@tx.Amount.ToString("N0") đ
                                        </strong>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (transactions.Count > 20)
                {
                    <div class="text-center mt-3">
                        <p class="text-muted">Hiển thị 20 giao dịch gần nhất</p>
                    </div>
                }
            }
        </div>
    </div>
</div>

@section Styles {
    <style>
        .bg-gradient {
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-2px);
            }
    </style>
}