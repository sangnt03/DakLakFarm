@model IEnumerable<AgriEcommerces_MVC.Models.PayoutRequest>

@{
    ViewData["Title"] = "Lịch sử rút tiền";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Farmer" asp-controller="Wallet" asp-action="Index">Ví của tôi</a></li>
            <li class="breadcrumb-item active" aria-current="page">Lịch sử rút tiền</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-clock-history"></i> Lịch sử Rút tiền</h2>
        <a asp-action="RequestPayout" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo yêu cầu rút tiền
        </a>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-inbox fs-1"></i>
                    <p class="mt-3">Bạn chưa có yêu cầu rút tiền nào</p>
                    <a asp-action="RequestPayout" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle"></i> Tạo yêu cầu ngay
                    </a>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Mã yêu cầu</th>
                                <th>Số tiền</th>
                                <th>Ngày yêu cầu</th>
                                <th>Trạng thái</th>
                                <th>Ngày hoàn thành</th>
                                <th>Chi tiết</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td><strong>#@request.PayoutRequestId</strong></td>
                                    <td>
                                        <strong class="text-primary">@request.Amount.ToString("N0") đ</strong>
                                    </td>
                                    <td>
                                        <small>@request.RequestDate.ToString("dd/MM/yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        @switch (request.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning text-dark">
                                                    <i class="bi bi-hourglass-split"></i> Chờ xử lý
                                                </span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle"></i> Đã chuyển tiền
                                                </span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle"></i> Đã từ chối
                                                </span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        @if (request.CompletedDate.HasValue)
                                        {
                                            <small>@request.CompletedDate.Value.ToString("dd/MM/yyyy HH:mm")</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-sm btn-outline-info"
                                                data-bs-toggle="modal"
                                                data-bs-target="#detailModal@(request.PayoutRequestId)">
                                            <i class="bi bi-eye"></i> Xem
                                        </button>
                                    </td>
                                </tr>

                                <div class="modal fade" id="detailModal@(request.PayoutRequestId)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Chi tiết yêu cầu #@request.PayoutRequestId</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="mb-3 border-bottom pb-2">
                                                    <div class="d-flex justify-content-between">
                                                        <strong>Số tiền rút:</strong>
                                                        <span class="text-primary fw-bold fs-5">@request.Amount.ToString("N0") đ</span>
                                                    </div>
                                                </div>

                                                <div class="mb-3">
                                                    <h6>Thông tin nhận tiền (VietQR):</h6>
                                                    @{
                                                        try
                                                        {
                                                            // Parse JSON bankDetails
                                                            var bankDetails = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(request.BankDetails);

                                                            <div class="bg-light p-3 rounded">
                                                                <p class="mb-1"><strong>Ngân hàng:</strong> @bankDetails.BankName</p>
                                                                <p class="mb-1"><strong>Số tài khoản:</strong> @bankDetails.AccountNumber</p>
                                                                <p class="mb-1"><strong>Chủ tài khoản:</strong> <span class="text-uppercase">@bankDetails.AccountName</span></p>
                                                            </div>
                                                        }
                                                        catch
                                                        {
                                                            <div class="alert alert-warning">Không thể đọc thông tin ngân hàng (Dữ liệu lỗi).</div>
                                                        }
                                                    }
                                                </div>

                                                @if (request.Status == "Completed")
                                                {
                                                    <div class="alert alert-success">
                                                        <strong><i class="bi bi-check-circle-fill"></i> Giao dịch thành công!</strong><br />
                                                        Admin đã chuyển khoản vào thời gian: @request.CompletedDate?.ToString("dd/MM/yyyy HH:mm")
                                                    </div>
                                                }
                                                else if (request.Status == "Rejected")
                                                {
                                                    <div class="alert alert-danger">
                                                        <strong><i class="bi bi-x-circle-fill"></i> Yêu cầu bị từ chối.</strong><br />
                                                        Vui lòng kiểm tra lại thông tin ngân hàng hoặc liên hệ Admin.
                                                    </div>
                                                }

                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>