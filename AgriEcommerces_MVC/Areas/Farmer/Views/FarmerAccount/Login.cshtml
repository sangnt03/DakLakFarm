@model AgriEcommerces_MVC.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Farmer";
    Layout = "~/Areas/Farmer/Views/Shared/_LayoutFarmer.cshtml";
}


<div class="login-container">
    <div class="login-card">
        <h1 class="login-title">🌱 Farmer Portal</h1>
        <p class="login-subtitle">Chào mừng bạn trở lại</p>

        <form asp-area="Farmer" asp-controller="FarmerAccount" asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="email" class="form-label">📧 Địa chỉ Email</label>
                <div class="position-relative">
                    <input asp-for="email" class="form-control" placeholder="Nhập email của bạn..." />
                </div>
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="password" class="form-label">🔒 Mật khẩu</label>
                <div class="position-relative">
                    <input asp-for="password" type="password" class="form-control" placeholder="Nhập mật khẩu..." />
                </div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Ghi nhớ đăng nhập</label>
            </div>

            <button type="submit" class="btn btn-login">
                Đăng nhập
            </button>

            @if (!string.IsNullOrEmpty(Model?.ReturnUrl))
            {
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            }
        </form>
    </div>
</div>

<style>
    .login-container {
        min-height: 100vh;
        background: linear-gradient(135deg, #f0fdf4 0%, #ecfdf5 30%, #fffbeb 70%, #fef3c7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }
    
    .login-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border: 2px solid rgba(16, 185, 129, 0.3);
        border-radius: 20px;
        padding: 40px;
        box-shadow: 
            0 20px 40px rgba(16, 185, 129, 0.15),
            0 0 0 1px rgba(251, 191, 36, 0.1),
            inset 0 1px 0 rgba(255, 255, 255, 0.8);
        max-width: 450px;
        width: 100%;
        position: relative;
        overflow: hidden;
    }
    
    .login-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 3px;
        background: linear-gradient(90deg, #10b981, #059669, #fbbf24, #f59e0b);
    }
    
    .login-title {
        color: #059669;
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 10px;
        text-shadow: 0 0 20px rgba(16, 185, 129, 0.3);
    }
    
    .login-subtitle {
        color: #6b7280;
        text-align: center;
        margin-bottom: 30px;
        font-size: 0.95rem;
    }
    
    .form-floating {
        margin-bottom: 20px;
        position: relative;
    }
    
    .form-control {
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid rgba(16, 185, 129, 0.3);
        border-radius: 12px;
        color: #374151;
        padding: 15px 20px;
        font-size: 16px;
        transition: all 0.3s ease;
        height: auto;
    }
    
    .form-control:focus {
        background: rgba(255, 255, 255, 1);
        border-color: #10b981;
        box-shadow: 
            0 0 0 0.2rem rgba(16, 185, 129, 0.25),
            0 0 20px rgba(251, 191, 36, 0.2);
        color: #111827;
        outline: none;
    }
    
    .form-control::placeholder {
        color: #9ca3af;
    }
    
    .form-label {
        color: #374151;
        font-weight: 500;
        margin-bottom: 8px;
        font-size: 0.9rem;
    }
    
    .form-check {
        margin: 25px 0;
    }
    
    .form-check-input {
        background-color: rgba(255, 255, 255, 0.9);
        border: 2px solid rgba(16, 185, 129, 0.4);
        border-radius: 6px;
        width: 18px;
        height: 18px;
    }
    
    .form-check-input:checked {
        background-color: #10b981;
        border-color: #10b981;
    }
    
    .form-check-input:focus {
        box-shadow: 0 0 0 0.25rem rgba(16, 185, 129, 0.25);
    }
    
    .form-check-label {
        color: #4b5563;
        font-size: 0.9rem;
        margin-left: 8px;
    }
    
    .btn-login {
        background: linear-gradient(135deg, #10b981 0%, #059669 50%, #fbbf24 100%);
        border: none;
        border-radius: 12px;
        color: white;
        font-weight: 600;
        padding: 15px 30px;
        font-size: 16px;
        width: 100%;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        text-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
    }
    
    .btn-login:hover {
        background: linear-gradient(135deg, #059669 0%, #047857 50%, #f59e0b 100%);
        transform: translateY(-2px);
        box-shadow: 
            0 10px 25px rgba(16, 185, 129, 0.3),
            0 0 30px rgba(251, 191, 36, 0.2);
    }
    
    .btn-login:active {
        transform: translateY(0);
    }
    
    .text-danger {
        color: #ef4444 !important;
        font-size: 0.85rem;
        margin-top: 5px;
    }
    
    .validation-summary-errors {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 8px;
        padding: 15px;
        margin-bottom: 20px;
    }
    
    .validation-summary-errors ul {
        margin: 0;
        padding-left: 20px;
    }
    
    .validation-summary-errors li {
        color: #ef4444;
        font-size: 0.9rem;
    }
    
    .input-icon {
        position: absolute;
        left: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #64748b;
        z-index: 10;
    }
    
    .input-with-icon {
        padding-left: 45px !important;
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .login-card {
        animation: fadeInUp 0.6s ease-out;
    }
    
    @@media (max-width: 576px) {
        .login-card {
            padding: 30px 25px;
            margin: 10px;
        }
        
        .login-title {
            font-size: 1.5rem;
        }
    }
</style>
