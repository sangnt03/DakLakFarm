@model AgriEcommerces_MVC.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Farmer";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – Manager Area</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Ccircle cx='50' cy='50' r='48' fill='%232d8b57'/%3E%3Cpath d='M50 30c-8 0-15 7-15 15v10h30V45c0-8-7-15-15-15zM45 55h10v15H45z' fill='%23fff'/%3E%3C/svg%3E" />
</head>

<body>
    <div class="login-wrapper">
        <div class="login-container">
            
            <div class="left-panel">
                <div class="logo-section">
                    <div class="logo-circle">
                        <span class="logo-icon">🌱</span>
                    </div>
                    <h2 class="brand-name">Farmer Manager</h2>
                </div>

                <div class="welcome-section">
                    <h1 class="welcome-title">Chào mừng trở lại!</h1>
                    <p class="welcome-text">Trang quản lý dành cho shop bán hàng</p>
                </div>
            </div>

            <!-- Right Panel - White -->
            <div class="right-panel">
                <div class="form-section">
                    <h2 class="form-title">welcome</h2>
                    <p class="form-subtitle">Đăng nhập tài khoản của bạn để tiếp tục</p>

                    <form asp-area="Farmer" asp-controller="FarmerAccount" asp-action="Login" method="post">
                        @if (TempData["LoginMessage"] != null)
                        {
                            <div class="alert alert-success text-center">
                                @TempData["LoginMessage"]
                            </div>
                        }

                        <div class="form-group">
                            <input asp-for="email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input asp-for="password" type="password" class="form-control" placeholder="Mật khẩu" />
                            <span asp-validation-for="password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn-login">
                            Đăng nhập
                        </button>

                        @if (!string.IsNullOrEmpty(Model?.ReturnUrl))
                        {
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        }

        .login-wrapper {
            min-height: 100vh;
            background: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            display: flex;
            max-width: 900px;
            width: 100%;
            background: white;
            border-radius: 24px;
            overflow: hidden;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
            min-height: 550px;
        }

        /* Left Panel - Xanh lá đậm vừa phải (#2d8b57) */
        .left-panel {
            flex: 1;
            background: linear-gradient(135deg, #2d8b57 0%, #1e6a42 100%);
            padding: 60px 50px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            color: white;
            position: relative;
        }

            .left-panel::before {
                content: '';
                position: absolute;
                top: -50%;
                right: -30%;
                width: 400px;
                height: 400px;
                background: rgba(255, 255, 255, 0.08);
                border-radius: 50%;
            }

            .left-panel::after {
                content: '';
                position: absolute;
                bottom: -30%;
                left: -20%;
                width: 300px;
                height: 300px;
                background: rgba(255, 255, 255, 0.08);
                border-radius: 50%;
            }

        .logo-section {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .logo-circle {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .logo-icon {
            font-size: 36px;
        }

        .brand-name {
            font-size: 24px;
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        .welcome-section {
            text-align: center;
            position: relative;
            z-index: 1;
        }

        .welcome-title {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 20px;
        }

        .welcome-text {
            font-size: 15px;
            line-height: 1.6;
            opacity: 0.95;
        }

        /* Right Panel */
        .right-panel {
            flex: 1;
            padding: 60px 50px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .form-section {
            width: 100%;
            max-width: 350px;
        }

        .form-title {
            color: #2d8b57;
            font-size: 32px;
            font-weight: 600;
            margin-bottom: 8px;
            text-align: center;
        }

        .form-subtitle {
            color: #6b7280;
            font-size: 14px;
            margin-bottom: 40px;
            text-align: center;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-control {
            width: 100%;
            padding: 16px 20px;
            border: none;
            background: #e8f5e9;
            border-radius: 25px;
            font-size: 15px;
            color: #333;
            transition: all 0.3s;
        }

            .form-control:focus {
                outline: none;
                background: #d8f0e0;
                box-shadow: 0 0 0 3px rgba(45, 139, 87, 0.15);
            }

            .form-control::placeholder {
                color: #94a3b8;
            }

        .btn-login {
            width: 100%;
            padding: 16px;
            background: #2d8b57;
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            margin-top: 10px;
            letter-spacing: 1px;
        }

            .btn-login:hover {
                background: #1e6a42;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(45, 139, 87, 0.3);
            }

            .btn-login:active {
                transform: translateY(0);
            }

        .text-danger {
            color: #dc2626;
            font-size: 12px;
            margin-top: 5px;
            display: block;
            padding-left: 20px;
        }

        .validation-summary-errors {
            background: #fef2f2;
            border-radius: 12px;
            padding: 12px 16px;
            margin-bottom: 20px;
        }

            .validation-summary-errors ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .validation-summary-errors li {
                color: #dc2626;
                font-size: 13px;
                margin-bottom: 4px;
            }

                .validation-summary-errors li:last-child {
                    margin-bottom: 0;
                }

        @@media (max-width: 768px) {
            .login-container

        {
            flex-direction: column;
        }

        .left-panel {
            padding: 40px 30px;
            min-height: 300px;
        }

        .welcome-title {
            font-size: 26px;
        }

        .welcome-text {
            font-size: 14px;
        }

        .right-panel {
            padding: 40px 30px;
        }

        .form-title {
            font-size: 26px;
        }

        }
    </style>
</body>
</html>