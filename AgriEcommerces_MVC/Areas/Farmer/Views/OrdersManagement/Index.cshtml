@model IEnumerable<AgriEcommerces_MVC.Models.orderdetail>
@using System
@using Microsoft.AspNetCore.Mvc
@using AgriEcommerces_MVC.Models
@{
    ViewData["Title"] = "Quản lý đơn hàng";
}

<style>
    body {
        background: linear-gradient(135deg, #f0fff4 0%, #f5fffa 50%, #fffacd 100%);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        min-height: 100vh;
    }
    
    .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
    }
    
    h2 {
        color: #2d5016;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 3px solid #32cd32;
        font-weight: 700;
        text-shadow: 1px 1px 2px rgba(45, 80, 22, 0.1);
        background: linear-gradient(45deg, #2d5016, #228b22);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    
    .alert {
        border-radius: 12px;
        border: none;
        padding: 16px 24px;
        margin-bottom: 25px;
        font-weight: 500;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    
    .alert-success {
        background: linear-gradient(135deg, #d4f8d4 0%, #e8f5e8 100%);
        color: #2d5016;
        border-left: 5px solid #32cd32;
    }
    
    .alert-danger {
        background: linear-gradient(135deg, #ffe4e1 0%, #ffeaa7 100%);
        color: #8b4513;
        border-left: 5px solid #ff6b35;
    }
    
    .table-wrapper {
        background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(240,255,244,0.95) 100%);
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(45, 80, 22, 0.15);
        overflow: hidden;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(50, 205, 50, 0.2);
    }
    
    .table {
        margin: 0;
        font-size: 14px;
    }
    
    .table thead th {
        background: linear-gradient(135deg, #32cd32 0%, #7cfc00 50%, #adff2f 100%);
        color: #2d5016;
        border: none;
        padding: 18px 12px;
        font-weight: 700;
        text-align: center;
        font-size: 13px;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
        position: relative;
    }
    
    .table thead th:nth-child(5) { /* Cột Thành tiền */
        width: 130px;
        min-width: 130px;
    }
    
    .table thead th:nth-child(7) { /* Cột Địa chỉ */
        width: 200px;
        min-width: 200px;
    }
    table thead th:nth-child(6) { /* Cột Thông tin khách hàng */
        width: 150px;
        min-width: 150px;
    }
    .table thead th:nth-child(8) { /* Cột Trạng thái */
        width: 160px;
        min-width: 160px;
    }
    
    .table thead th::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 2px;
        background: linear-gradient(90deg, #228b22, #32cd32, #7cfc00);
    }
    
    .table tbody tr {
        border-bottom: 1px solid rgba(50, 205, 50, 0.15);
        transition: all 0.3s ease;
        background: rgba(255,255,255,0.7);
    }
    
    .table tbody tr:hover {
        background: linear-gradient(135deg, rgba(240,255,244,0.9) 0%, rgba(255,255,224,0.9) 100%);
        transform: translateY(-2px);
        box-shadow: 0 4px 20px rgba(50, 205, 50, 0.2);
    }
    
    .table tbody td {
        padding: 15px 12px;
        vertical-align: middle;
        border: none;
        text-align: center;
    }
    
    .table tbody td:nth-child(5) { /* Cột Thành tiền */
        width: 140px;
        min-width: 140px;
    }
    
    .table tbody td:nth-child(7) { /* Cột Địa chỉ */
        width: 120px;
        min-width: 120px;
        font-size: 11px;
        padding: 15px 8px;
    }
    
    .table tbody td:nth-child(8) { /* Cột Trạng thái */
        width: 130px;
        min-width: 130px;
    }
    
    .order-id {
        background: linear-gradient(135deg, #32cd32 0%, #7cfc00 100%);
        color: #2d5016;
        padding: 6px 12px;
        border-radius: 20px;
        font-weight: bold;
        font-size: 12px;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
        box-shadow: 0 2px 8px rgba(50, 205, 50, 0.3);
    }
    
    .product-name {
        background: linear-gradient(135deg, #e8f5e8 0%, #f0fff4 100%);
        color: #2d5016;
        padding: 5px 10px;
        border-radius: 8px;
        margin: 3px 0;
        display: inline-block;
        font-size: 12px;
        font-weight: 600;
        border: 1px solid rgba(50, 205, 50, 0.3);
    }
    
    .quantity {
        background: linear-gradient(135deg, #fffacd 0%, #ffffe0 100%);
        color: #8b7500;
        padding: 5px 10px;
        border-radius: 8px;
        font-weight: bold;
        margin: 3px 0;
        display: inline-block;
        border: 1px solid rgba(255, 215, 0, 0.4);
        box-shadow: 0 2px 5px rgba(255, 215, 0, 0.2);
    }
    
    .price {
        color: #ff6b35;
        font-weight: 700;
        margin: 3px 0;
        display: block;
        text-shadow: 1px 1px 2px rgba(255, 107, 53, 0.1);
    }
    
    .total-price {
        background: linear-gradient(135deg, #32cd32 0%, #228b22 100%);
        color: white;
        padding: 10px 15px;
        border-radius: 12px;
        font-weight: bold;
        font-size: 12px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
        box-shadow: 0 4px 12px rgba(50, 205, 50, 0.4);
    }
    
    .customer-info {
        text-align: left;
        font-size: 13px;
        background: linear-gradient(135deg, rgba(240,255,244,0.8) 0%, rgba(255,255,224,0.8) 100%);
        padding: 5px;
        border-radius: 8px;
        border: 1px solid rgba(50, 205, 50, 0.2);
    }
    
    .customer-name {
        font-weight: bold;
        color: #2d5016;
        margin-bottom: 5px;
        font-size: 14px;
    }
    
    .customer-phone {
        color: #228b22;
        font-weight: 600;
        font-size: 12px;
        background: rgba(50, 205, 50, 0.1);
        padding: 2px 6px;
        border-radius: 4px;
        display: inline-block;
    }
    
    .status {
        padding: 8px 15px;
        border-radius: 25px;
        font-weight: bold;
        font-size: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 3px 10px rgba(0,0,0,0.15);
    }
    
    .status-pending {
        background: linear-gradient(135deg, #fffacd 0%, #ffd700 100%);
        color: #8b7500;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
    }
    
    .status-approved {
        background: linear-gradient(135deg, #87ceeb 0%, #00bfff 100%);
        color: #1e3a8a;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
    }
    
    .status-completed {
        background: linear-gradient(135deg, #32cd32 0%, #228b22 100%);
        color: white;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }
    
    .btn {
        border: none;
        padding: 10px 18px;
        border-radius: 25px;
        font-size: 12px;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }
    
    .btn-success {
        background: linear-gradient(135deg, #32cd32 0%, #7cfc00 100%);
        color: #2d5016;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
    }
    
    .btn-success:hover {
        background: linear-gradient(135deg, #228b22 0%, #32cd32 100%);
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(50, 205, 50, 0.4);
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }
    
    .btn-primary {
        background: linear-gradient(135deg, #00bfff 0%, #87ceeb 100%);
        color: #1e3a8a;
        text-shadow: 1px 1px 2px rgba(255,255,255,0.3);
    }
    
    .btn-primary:hover {
        background: linear-gradient(135deg, #1e90ff 0%, #00bfff 100%);
        color: white;
        transform: translateY(-3px);
        box-shadow: 0 6px 20px rgba(30, 144, 255, 0.4);
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }
    
    .text-muted {
        color: #7cfc00;
        font-style: italic;
        font-weight: 600;
        background: linear-gradient(135deg, rgba(124, 252, 0, 0.1) 0%, rgba(50, 205, 50, 0.1) 100%);
        padding: 5px 10px;
        border-radius: 8px;
        border: 1px solid rgba(124, 252, 0, 0.3);
    }
    
    /* Animation effects */
    @@keyframes pulse {
        0% { transform: scale(1); }
        50% { transform: scale(1.05); }
        100% { transform: scale(1); }
    }
    
    .order-id:hover {
        animation: pulse 0.6s ease-in-out;
    }
    
    /* Responsive */
    @@media (max-width: 768px) {
        .table-wrapper {
            overflow-x: auto;
        }
        
        .table {
            min-width: 900px;
        }
        
        .container {
            padding: 15px;
        }
        
        .customer-info {
            font-size: 11px;
            padding: 5px;
        }
        
        .customer-name {
            font-size: 12px;
        }
    }
</style>

<div class="container">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Sản phẩm</th>
                    <th>SL</th>
                    <th>Giá</th>
                    <th>Thành tiền</th>
                    <th>Thông tin khách hàng</th>
                    <th>Địa chỉ</th>
                    <th>Trạng thái</th>
                    <th>Hành động</th>
                </tr>
            </thead>
            <tbody>
                @{
                    var groupedOrders = Model.GroupBy(d => d.orderid);
                    foreach (var group in groupedOrders)
                    {
                        var firstDetail = group.First();
                        <tr>
                            <td>
                                <span class="order-id">#@firstDetail.orderid</span>
                            </td>
                            <td style="text-align: left;">
                                @foreach (var detail in group)
                                {
                                    <span class="product-name">@detail.product.productname</span>
                                    if (!group.Last().Equals(detail))
                                    {
                                        <br />
                                    }
                                }
                            </td>
                            <td>
                                @foreach (var detail in group)
                                {
                                    <span class="quantity">@detail.quantity</span>
                                    if (!group.Last().Equals(detail))
                                    {
                                        <br />
                                    }
                                }
                            </td>
                            <td>
                                @foreach (var detail in group)
                                {
                                    <span class="price">@(detail.unitprice.ToString("N0")) VNĐ</span>
                                    if (!group.Last().Equals(detail))
                                    {
                                        <br />
                                    }
                                }
                            </td>
                            <td>
                                <span class="total-price">@(group.Sum(d => d.quantity * d.unitprice).ToString("N0")) VNĐ</span>
                            </td>
                            <td class="customer-info">
                                <div class="customer-name">@firstDetail.order.customername</div>
                                <span class="customer-phone">📞 @firstDetail.order.customerphone</span>
                            </td>
                            <td style="text-align: left; font-size: 11px; padding: 15px 8px;">
                                @firstDetail.order.shippingaddress
                            </td>
                            <td>
                                @if (firstDetail.order.status == "Chờ duyệt")
                                {
                                    <span class="status status-pending">@firstDetail.order.status</span>
                                }
                                else if (firstDetail.order.status == "Đã duyệt")
                                {
                                    <span class="status status-approved">@firstDetail.order.status</span>
                                }
                                else
                                {
                                    <span class="status status-completed">@firstDetail.order.status</span>
                                }
                            </td>
                            <td>
                                @* Nếu trạng thái là "Chờ duyệt" -> Hiện nút Duyệt *@
                                @if (firstDetail.order.status == "Chờ duyệt")
                                {
                                    <form asp-area="Farmer"
                                          asp-controller="OrdersManagement"
                                          asp-action="Approve"
                                          method="post"
                                          asp-route-id="@firstDetail.orderdetailid"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn duyệt đơn hàng này?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-success">
                                            Duyệt
                                        </button>
                                    </form>
                                }
                                @* Nếu trạng thái là "Đã duyệt" -> Hiện nút Chuyển sang "Đang vận chuyển" *@
                                else if (firstDetail.order.status == "Đã duyệt")
                                {
                                    <form asp-area="Farmer"
                                          asp-controller="OrdersManagement"
                                          asp-action="Approve"
                                          method="post"
                                          asp-route-id="@firstDetail.orderdetailid"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn chuyển đơn hàng này sang trạng thái Đang vận chuyển?');">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-primary">
                                            Đã vận chuyển
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-muted">Đã Cập Nhật</span>
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>