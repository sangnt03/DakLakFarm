@using AgriEcommerces_MVC.Areas.Farmer.ViewModel
@model List<RevenusViewModel>

@{
    ViewData["Title"] = "Dashboard doanh thu";
    bool isViewingMonth = ViewBag.Month != null;
    var labels = Model.Select(m => isViewingMonth
                    ? m.Period.ToString("dd/MM")
                    : "Tháng " + m.Period.Month).ToArray();

    var values = Model.Select(m => m.TotalRevenue).ToArray();
}

<style>
    /* --- THEME: GREEN / MINT --- */
    :root {
        --theme-primary: #10b981; /* Xanh lá (Emerald) */
        --theme-primary-dark: #059669; /* Xanh đậm */
        --theme-light: #d1fae5; /* Xanh rất nhạt */
        --theme-gray: #f3f4f6;
        --text-dark: #1f2937;
    }

    .dashboard-container {
        background-color: var(--theme-gray);
        min-height: 100vh;
        padding: 30px;
        font-family: 'Segoe UI', sans-serif;
    }

    /* Header */
    .dashboard-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .dashboard-title {
        color: var(--text-dark);
        font-size: 24px;
        font-weight: 800;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Filter Card */
    .filter-card {
        background: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        margin-bottom: 30px;
        border-left: 4px solid var(--theme-primary);
    }

    .filter-form {
        display: flex;
        gap: 15px;
        align-items: flex-end;
    }

    .form-label {
        font-weight: 600;
        color: #4b5563;
        margin-bottom: 5px;
        font-size: 14px;
    }

    .form-select {
        border: 1px solid #e5e7eb;
        border-radius: 8px;
        padding: 10px 15px;
        font-weight: 600;
        color: #374151;
    }

        .form-select:focus {
            border-color: var(--theme-primary);
            box-shadow: 0 0 0 0.2rem rgba(16, 185, 129, 0.25);
        }

    .btn-filter {
        background: var(--theme-primary);
        color: white;
        border: none;
        padding: 10px 25px;
        border-radius: 8px;
        font-weight: 700;
        transition: all 0.3s;
    }

        .btn-filter:hover {
            background: var(--theme-primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(16, 185, 129, 0.3);
        }

    /* Stats Cards */
    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        height: 100%;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
        transition: transform 0.3s ease;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 3px solid transparent;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0,0,0,0.1);
            border-bottom-color: var(--theme-primary);
        }

    .stat-content h6 {
        font-size: 13px;
        color: #6b7280;
        text-transform: uppercase;
        font-weight: 700;
        margin-bottom: 5px;
        letter-spacing: 0.5px;
    }

    .stat-value {
        font-size: 24px;
        font-weight: 800;
        color: #111827;
    }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
    }

    /* Icon Colors - Customized for Green Theme */
    .icon-primary {
        background: #ecfdf5;
        color: #10b981;
    }
    /* Xanh lá */
    .icon-warning {
        background: #fffbeb;
        color: #f59e0b;
    }
    /* Vàng */
    .icon-info {
        background: #eff6ff;
        color: #3b82f6;
    }
    /* Xanh dương */

    /* Text Colors */
    .text-primary-custom {
        color: #10b981 !important;
    }

    .text-warning-custom {
        color: #f59e0b !important;
    }

    .text-info-custom {
        color: #3b82f6 !important;
    }

    /* Chart Card */
    .chart-card {
        background: white;
        border-radius: 12px;
        padding: 25px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    }

    .chart-header {
        margin-bottom: 20px;
        font-weight: 700;
        color: var(--text-dark);
        font-size: 18px;
        border-left: 4px solid var(--theme-primary);
        padding-left: 10px;
    }

    .chart-container {
        position: relative;
        height: 400px;
        width: 100%;
    }

    /* Alert Info */
    .alert-custom {
        background: #f0fdf4; /* Xanh lá rất nhạt */
        color: #065f46;
        border-radius: 12px;
        padding: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        border: 1px solid #a7f3d0;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .filter-form {
            flex-direction: column;
            align-items: stretch;
        }

        .dashboard-container {
            padding: 15px;
        }

        .stat-card {
            margin-bottom: 15px;
        }
    }
</style>

<div class="dashboard-container">
    <div class="dashboard-header">
        <h2 class="dashboard-title">
            <i class="fas fa-leaf text-primary-custom me-2"></i> @ViewData["Title"]
        </h2>
    </div>

    <div class="filter-card">
        <form id="filterForm" method="get" class="filter-form">
            <div class="flex-grow-1">
                <label class="form-label">Chọn Năm</label>
                <select name="year" class="form-select">
                    @for (int y = DateTime.Now.Year; y >= DateTime.Now.Year - 5; y--)
                    {
                        <option value="@y" selected="@(y == (int)ViewBag.Year)">@y</option>
                    }
                </select>
            </div>

            <div class="flex-grow-1">
                <label class="form-label">Chọn Tháng</label>
                <select id="monthSelect" name="month" class="form-select">
                    <option value="" selected="@(ViewBag.Month == null)">-- Tất cả --</option>
                    @for (int m = 1; m <= 12; m++)
                    {
                        <option value="@m" selected="@(ViewBag.Month == m)">Tháng @m</option>
                    }
                </select>
            </div>

            <div>
                <button type="submit" class="btn-filter">
                    <i class="fas fa-filter me-2"></i> Lọc
                </button>
            </div>
        </form>
    </div>

    @if (!Model.Any())
    {
        <div class="alert-custom">
            <i class="fas fa-info-circle fa-2x"></i>
            <div>
                <strong>Không có dữ liệu</strong><br>
                Chưa có phát sinh doanh thu cho kỳ báo cáo này.
            </div>
        </div>
    }
    else
    {
        <div class="row mb-4 g-3">
            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-content">
                        <h6>Kỳ báo cáo</h6>
                        @if (ViewBag.Month != null)
                        {
                            <div class="stat-value">@Model.Count ngày</div>
                        }
                        else
                        {
                            <div class="stat-value">@Model.Count tháng</div>
                        }
                    </div>
                    <div class="icon-box icon-info">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-content">
                        <h6 class="text-primary-custom">Tổng doanh thu</h6>
                        <div class="stat-value text-primary-custom">
                            @Model.Sum(x => x.TotalRevenue).ToString("N0") đ
                        </div>
                    </div>
                    <div class="icon-box icon-primary">
                        <i class="fas fa-coins"></i>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="stat-card">
                    <div class="stat-content">
                        @if (ViewBag.Month != null)
                        {
                            <h6 class="text-warning-custom">Trung bình/ngày</h6>
                        }
                        else
                        {
                            <h6 class="text-warning-custom">Trung bình/tháng</h6>
                        }

                        <div class="stat-value text-warning-custom">
                            @(Model.Any() ? Model.Average(x => x.TotalRevenue).ToString("N0") : "0") đ
                        </div>
                    </div>
                    <div class="icon-box icon-warning">
                        <i class="fas fa-chart-line"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="chart-card">
            <h5 class="chart-header">Biểu đồ tăng trưởng doanh thu</h5>
            <div class="chart-container">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Disable monthSelect khi submit nếu chọn "Tất cả"
        document.getElementById('filterForm').addEventListener('submit', function (e) {
            var sel = document.getElementById('monthSelect');
            if (sel.value === '') {
                sel.disabled = true;
            }
        });

        // Vẽ Chart.js (Theme Xanh Lá)
        var ctx = document.getElementById('revenueChart')?.getContext('2d');
        if (ctx) {
            new Chart(ctx, {
                type: 'line',
                data: {
                    labels: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(labels)),
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: @Html.Raw(System.Text.Json.JsonSerializer.Serialize(values)),
                        // Màu Xanh Lá Chủ Đạo
                        backgroundColor: 'rgba(16, 185, 129, 0.1)', // Nền nhạt dưới đường
                        borderColor: '#10b981',                     // Đường màu xanh lá đậm
                        pointBackgroundColor: '#fff',
                        pointBorderColor: '#059669',
                        pointHoverBackgroundColor: '#059669',
                        pointHoverBorderColor: '#fff',
                        borderWidth: 3,
                        pointRadius: 5,
                        pointHoverRadius: 7,
                        fill: true,
                        tension: 0.3 // Đường cong mềm mại
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            backgroundColor: 'rgba(255, 255, 255, 0.95)',
                            titleColor: '#1f2937',
                            bodyColor: '#059669', // Chữ tooltip màu xanh đậm
                            titleFont: { size: 14, weight: 'bold' },
                            bodyFont: { size: 14, weight: 'bold' },
                            borderColor: '#a7f3d0',
                            borderWidth: 1,
                            padding: 12,
                            displayColors: false,
                            callbacks: {
                                label: function(context) {
                                    return context.parsed.y.toLocaleString('vi-VN') + ' VNĐ';
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            grid: { display: false },
                            ticks: { font: { size: 12, weight: '600' }, color: '#6b7280' }
                        },
                        y: {
                            beginAtZero: true,
                            grid: { color: '#f3f4f6', borderDash: [5, 5] },
                            ticks: {
                                font: { size: 12 },
                                color: '#6b7280',
                                callback: function(value) {
                                    return value.toLocaleString('vi-VN') + ' đ';
                                }
                            }
                        }
                    }
                }
            });
        }
    </script>
}