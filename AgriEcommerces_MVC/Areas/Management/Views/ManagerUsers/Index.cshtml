@model List<AgriEcommerces_MVC.Models.user>

@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="row mb-4 align-items-center">
    <div class="col">
        <h2 class="mb-0"><i class="fas fa-users me-2"></i>@ViewData["Title"]</h2>
    </div>
    <div class="col-auto">
        <a asp-area="Management"
           asp-controller="ManagerUsers"
           asp-action="Create"
           class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Thêm người dùng
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Tên người dùng</th>
                    <th scope="col">Email</th>
                    <th scope="col">Vai trò</th>
                    <th scope="col">Ngày tạo</th>
                    <th scope="col">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.fullname</td>
                            <td>@user.email</td>
                            <td>Khách Hàng</td>
                            <td>@user.createdat?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a asp-area="Management"
                                   asp-controller="ManagerUsers"
                                   asp-action="Edit"
                                   asp-route-id="@user.userid"
                                   class="btn btn-sm btn-warning me-2">
                                    <i class="fas fa-edit"></i> Sửa
                                </a>

                                @* Chuyển nút Xóa thành form POST để dùng antiforgery *@
                                <form asp-area="Management"
                                      asp-controller="ManagerUsers"
                                      asp-action="Delete"
                                      asp-route-id="@user.userid"
                                      method="post"
                                      class="d-inline"
                                      onsubmit="return confirm('Bạn có chắc muốn xóa?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Xóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center text-muted">Không có người dùng nào.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
