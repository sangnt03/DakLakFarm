@model IEnumerable<AgriEcommerces_MVC.Models.PayoutRequest>

@{
    ViewData["Title"] = "Quản lý rút tiền";
    var currentStatus = ViewBag.CurrentStatus as string;
    var adminBalance = (decimal)(ViewBag.AdminWalletBalance ?? 0);
}

<style>
    /* --- THEME CSS (Giữ nguyên theme Vàng-Cam) --- */
    :root {
        --theme-color: #ff9800;
        --theme-gradient: linear-gradient(135deg, #ffc107 0%, #ff9800 100%);
    }

    .bg-theme-gradient {
        background: var(--theme-gradient);
        color: white;
        border: none;
    }

    .text-theme {
        color: var(--theme-color) !important;
    }

    .btn-theme {
        background-color: white;
        color: var(--theme-color);
        border: 1px solid var(--theme-color);
        transition: all 0.3s;
    }

        .btn-theme:hover {
            background-color: var(--theme-color);
            color: white;
        }

    .nav-tabs .nav-link {
        color: #6c757d;
    }

        .nav-tabs .nav-link.active {
            color: var(--theme-color) !important;
            border-top: 3px solid var(--theme-color) !important;
            font-weight: bold;
        }

    /* CSS MỚI CHO CỘT THAO TÁC VỚI CHỮ */
    .action-column {
        min-width: 280px;
        text-align: right;
    }

    .btn-action-text {
        padding: 8px 16px;
        font-size: 14px;
        font-weight: 500;
        border-radius: 6px;
        transition: all 0.2s;
        white-space: nowrap;
    }

        .btn-action-text i {
            font-size: 14px;
        }

        .btn-action-text:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        }

    .btn-view {
        background-color: #f8f9fa;
        color: #6c757d;
        border: 1px solid #dee2e6;
    }

        .btn-view:hover {
            background-color: #6c757d;
            color: white;
            border-color: #6c757d;
        }

    .btn-approve {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

        .btn-approve:hover {
            background-color: #28a745;
            color: white;
            border-color: #28a745;
        }

    .btn-reject {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

        .btn-reject:hover {
            background-color: #dc3545;
            color: white;
            border-color: #dc3545;
        }
</style>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-secondary">Xử lý yêu cầu rút tiền</h2>
            <p class="text-muted mb-0">Quản lý dòng tiền và thanh toán cho Farmer</p>
        </div>
        <a asp-action="Report" class="btn btn-theme shadow-sm fw-bold"><i class="bi bi-bar-chart-fill me-1"></i> Báo cáo</a>
    </div>

    <div class="row mb-4">
        <div class="col-md-5 col-lg-4">
            <div class="card bg-theme-gradient shadow h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-white-50 text-uppercase fw-bold small">Tổng quỹ hiện tại</h6>
                        <h2 class="mb-0 fw-bold display-6">@adminBalance.ToString("N0") đ</h2>
                        <small class="text-white-50 mt-1 d-block"><i class="bi bi-check2-circle me-1"></i> Tiền thực tế</small>
                    </div>
                    <i class="bi bi-wallet2" style="font-size: 3.5rem; opacity: 0.3;"></i>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm"><i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm"><i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"] <button type="button" class="btn-close" data-bs-dismiss="alert"></button></div>
    }

    <ul class="nav nav-tabs mb-3 border-bottom-0">
        <li class="nav-item">
            <a class="nav-link @(currentStatus == "Pending" ? "active" : "")" asp-action="Index" asp-route-status="Pending">
                <i class="bi bi-hourglass-split me-1"></i> Chờ xử lý
                @if (ViewBag.PendingCount > 0)
                {
                    <span class="badge bg-danger rounded-pill ms-1">@ViewBag.PendingCount</span>
                }
            </a>
        </li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Completed" ? "active" : "")" asp-action="Index" asp-route-status="Completed"><i class="bi bi-check-all me-1"></i> Đã hoàn thành <span class="badge bg-secondary rounded-pill ms-1">@ViewBag.CompletedCount</span></a></li>
        <li class="nav-item"><a class="nav-link @(currentStatus == "Rejected" ? "active" : "")" asp-action="Index" asp-route-status="Rejected"><i class="bi bi-x-circle me-1"></i> Đã từ chối <span class="badge bg-secondary rounded-pill ms-1">@ViewBag.RejectedCount</span></a></li>
    </ul>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="text-center py-5"><i class="bi bi-inbox text-secondary opacity-25 display-1"></i><h5 class="text-muted mt-3">Không có yêu cầu nào</h5></div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-light text-secondary">
                            <tr>
                                <th class="ps-4 py-3">ID</th>
                                <th class="py-3">Farmer</th>
                                <th class="py-3">Số tiền</th>
                                <th class="py-3">Ngày tạo</th>
                                <th class="py-3">Trạng thái</th>
                                <th class="py-3 text-end pe-4 action-column">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model)
                            {
                                <tr>
                                    <td class="ps-4 fw-bold text-theme">#@request.PayoutRequestId</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle d-flex justify-content-center align-items-center me-2 text-theme fw-bold border" style="width: 40px; height: 40px;">
                                                @(request.Farmer.fullname?.Substring(0, 1).ToUpper() ?? "F")
                                            </div>
                                            <div>
                                                <div class="fw-bold text-dark">@request.Farmer.fullname</div>
                                                <small class="text-muted">@request.Farmer.email</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td><span class="text-success fw-bold fs-5">@request.Amount.ToString("N0") đ</span></td>
                                    <td>
                                        <div class="d-flex flex-column">
                                            <span>@request.RequestDate.ToString("dd/MM/yyyy")</span>
                                            <small class="text-muted">@request.RequestDate.ToString("HH:mm")</small>
                                        </div>
                                    </td>
                                    <td>
                                        @switch (request.Status)
                                        {
                                            case "Pending":
                                                <span class="badge bg-warning text-dark px-3 py-2 rounded-pill">Chờ xử lý</span>
                                                break;
                                            case "Completed":
                                                <span class="badge bg-success px-3 py-2 rounded-pill">Đã hoàn thành</span>
                                                break;
                                            case "Rejected":
                                                <span class="badge bg-danger px-3 py-2 rounded-pill">Đã từ chối</span>
                                                break;
                                        }
                                    </td>

                                    <td class="text-end pe-4">
                                        <div class="d-flex justify-content-end gap-2">
                                            <a asp-action="Details" asp-route-id="@request.PayoutRequestId"
                                               class="btn btn-view btn-action-text">
                                                <i class="bi bi-eye me-1"></i> Xem
                                            </a>

                                            @if (request.Status == "Pending")
                                            {
                                                <form asp-action="Approve" method="post" class="d-inline"
                                                      onsubmit="return confirm('Xác nhận duyệt yêu cầu này? Tiền sẽ được trừ khỏi ví.')">
                                                    <input type="hidden" name="id" value="@request.PayoutRequestId" />
                                                    <button type="submit" class="btn btn-approve btn-action-text">
                                                        <i class="bi bi-check-lg me-1"></i> Duyệt
                                                    </button>
                                                </form>

                                                <button type="button" class="btn btn-reject btn-action-text"
                                                        data-bs-toggle="modal" data-bs-target="#rejectModal@(request.PayoutRequestId)">
                                                    <i class="bi bi-x-lg me-1"></i> Từ chối
                                                </button>
                                            }
                                        </div>

                                        @if (request.Status == "Pending")
                                        {
                                            <div class="modal fade text-start" id="rejectModal@(request.PayoutRequestId)" tabindex="-1">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <form asp-action="Reject" method="post">
                                                            <div class="modal-header bg-danger text-white">
                                                                <h5 class="modal-title">Từ chối yêu cầu #@request.PayoutRequestId</h5>
                                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <input type="hidden" name="id" value="@request.PayoutRequestId" />
                                                                <div class="mb-3">
                                                                    <label class="form-label fw-bold">Lý do từ chối <span class="text-danger">*</span></label>
                                                                    <textarea name="reason" class="form-control" rows="3" required placeholder="Nhập lý do..."></textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                                <button type="submit" class="btn btn-danger">Xác nhận</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>