@model AgriEcommerces_MVC.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập Quản Lý";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] – Admin</title>
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'%3E%3Cdefs%3E%3ClinearGradient id='bg' x1='0' y1='0' x2='0' y2='1'%3E%3Cstop offset='0%25' stop-color='%23FF6B6B'/%3E%3Cstop offset='50%25' stop-color='%23FF8E53'/%3E%3Cstop offset='100%25' stop-color='%23FF6B35'/%3E%3C/linearGradient%3E%3ClinearGradient id='tree' x1='0' y1='0' x2='0' y2='1'%3E%3Cstop offset='0%25' stop-color='%2310B981'/%3E%3Cstop offset='100%25' stop-color='%23059669'/%3E%3C/linearGradient%3E%3C/defs%3E%3Ccircle cx='50' cy='50' r='48' fill='url(%23bg)'/%3E%3Ccircle cx='35' cy='25' r='8' fill='%23FCD34D' opacity='0.9'/%3E%3Cpath d='M30 60c0-12 8-20 20-20s20 8 20 20v15H30z' fill='url(%23tree)'/%3E%3Crect x='48' y='60' width='4' height='15' fill='%238B4513'/%3E%3Cpath d='M25 75h50v5c0 2-2 4-4 4H29c-2 0-4-2-4-4z' fill='%2322C55E'/%3E%3C/svg%3E" />
</head>
<style>
    /*
          ADMIN LOGIN THEME (Yellow/Gold & White)
        */
    .admin-login-container {
        min-height: 100vh;
        /* Nền màu xám nhạt, chuyên nghiệp để làm nổi bật thẻ màu trắng */
        background: linear-gradient(135deg, #f5f7fa 0%, #e9ebee 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .admin-login-card {
        background: rgba(255, 255, 255, 0.98); /* Thẻ màu trắng chủ đạo */
        backdrop-filter: blur(5px);
        border-radius: 20px;
        /* Bóng mờ tinh tế, không màu */
        box-shadow: 0 15px 35px rgba(50, 50, 93, 0.1), 0 5px 15px rgba(0, 0, 0, 0.07);
        padding: 40px;
        width: 100%;
        max-width: 400px;
        border: 1px solid rgba(0, 0, 0, 0.05); /* Viền mờ */
        position: relative;
    }

    .admin-title {
        text-align: center;
        color: #333; /* Màu chữ đen/xám đậm */
        font-size: 28px;
        font-weight: 600;
        margin-bottom: 8px;
    }

    .admin-subtitle {
        text-align: center;
        color: #777; /* Màu chữ xám nhạt */
        font-size: 14px;
        margin-bottom: 30px;
        opacity: 0.8;
    }

    .admin-form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .admin-label {
        display: block;
        color: #555; /* Màu label xám */
        font-size: 14px;
        font-weight: 500;
        margin-bottom: 8px;
    }

    .admin-input {
        width: 100%;
        padding: 14px 18px;
        border: 2px solid #e0e0e0; /* Viền xám nhạt */
        border-radius: 12px;
        font-size: 16px;
        transition: all 0.3s ease;
        background: rgba(248, 249, 250, 0.3); /* Nền input gần như trắng */
        color: #333;
    }

        .admin-input:focus {
            outline: none;
            border-color: #FBC02D; /* Điểm nhấn VÀNG khi focus */
            background: #ffffff;
            box-shadow: 0 0 0 3px rgba(251, 192, 45, 0.15); /* Hào quang VÀNG */
        }

        .admin-input::placeholder {
            color: #aaa; /* Placeholder màu xám nhạt */
            opacity: 0.7;
        }

    .admin-checkbox-group {
        display: flex;
        align-items: center;
        margin-bottom: 30px;
        gap: 10px;
    }

    .admin-checkbox {
        width: 18px;
        height: 18px;
        accent-color: #FBC02D; /* Checkbox màu VÀNG */
        border-radius: 4px;
    }

    .admin-checkbox-label {
        color: #555;
        font-size: 14px;
        user-select: none;
        cursor: pointer;
    }

    .admin-btn {
        width: 100%;
        padding: 16px;
        /* Nút màu VÀNG chủ đạo */
        background: linear-gradient(135deg, #FBC02D 0%, #F9A825 100%);
        color: #333; /* Chữ màu đen/xám đậm trên nền vàng */
        border: none;
        border-radius: 12px;
        font-size: 16px;
        font-weight: 700; /* Đậm hơn */
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(251, 192, 45, 0.3); /* Bóng mờ VÀNG */
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

        .admin-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(249, 168, 37, 0.4);
            background: linear-gradient(135deg, #FCCA3F 0%, #F9A825 100%);
        }

        .admin-btn:active {
            transform: translateY(0);
        }

    .text-danger {
        color: #e91e63 !important; /* Giữ màu đỏ cho lỗi */
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .admin-divider {
        height: 2px;
        /* Dải phân cách màu xám nhạt */
        background: linear-gradient(90deg, transparent, #eee, transparent);
        margin: 25px 0;
        border: none;
    }

    /* Thanh trang trí trên đầu thẻ, đổi sang màu VÀNG */
    .admin-wave-decoration {
        position: absolute;
        top: -10px;
        left: 50%;
        transform: translateX(-50%);
        width: 60px;
        height: 4px;
        background: linear-gradient(90deg, #FBC02D, #FFF176, #FBC02D);
        border-radius: 2px;
    }

    .admin-login-card {
        position: relative;
    }

    @@keyframes wave {
        0%, 100% {
            transform: translateX(-50%) scaleX(1);
        }

        50% {
            transform: translateX(-50%) scaleX(1.1);
        }
    }

    .admin-wave-decoration {
        animation: wave 3s ease-in-out infinite;
    }
</style>

<div class="admin-login-container">
    <div class="admin-login-card">
        <div class="admin-wave-decoration"></div>

        <h1 class="admin-title">Đăng nhập Quản Lý</h1>
        <p class="admin-subtitle">Chào mừng trở lại</p>

        <hr class="admin-divider" />

        <form asp-area="Management" asp-controller="Account" asp-action="Login" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="admin-form-group">
                <label asp-for="email" class="admin-label">Email</label>
                <input asp-for="email" class="admin-input" placeholder="Nhập địa chỉ email của bạn" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="admin-form-group">
                <label asp-for="password" class="admin-label">Mật khẩu</label>
                <input asp-for="password" type="password" class="admin-input" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="password" class="text-danger"></span>
            </div>

            <div class="admin-checkbox-group">
                <input type="checkbox" class="admin-checkbox" id="rememberMe">
                <label class="admin-checkbox-label" for="rememberMe">Nhớ tài khoản</label>
            </div>

            <button type="submit" class="admin-btn">Đăng nhập</button>

            @if (!string.IsNullOrEmpty(Model?.ReturnUrl))
            {
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
            }
        </form>
    </div>
</div>
