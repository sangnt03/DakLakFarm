@model List<AgriEcommerces_MVC.Models.order>

<div class="table-responsive bg-white shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead class="bg-light text-secondary">
            <tr>
                <th class="ps-4 py-3">Mã đơn</th>
                <th class="text-center">Ngày đặt</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-end">Tổng tiền</th>
                <th class="text-center pe-4">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold text-primary">#@o.ordercode</td>
                    <td class="text-center text-muted small">
                        @(o.orderdate?.ToString("dd/MM/yyyy HH:mm"))
                    </td>
                    <td class="text-center">
                        @{
                            var statusText = "";
                            var badgeClass = "";
                            switch (o.status)
                            {
                                case "Pending": statusText = "Chờ xác nhận"; badgeClass = "bg-warning text-dark"; break;
                                case "Paid": statusText = "Đã thanh toán"; badgeClass = "bg-info text-white"; break;
                                case "Processing": statusText = "Đang đóng gói"; badgeClass = "bg-primary"; break;
                                case "Shipped": statusText = "Đang giao hàng"; badgeClass = "bg-info text-dark"; break;
                                case "Delivered": statusText = "Giao thành công"; badgeClass = "bg-success"; break;
                                case "Cancelled": statusText = "Đã hủy"; badgeClass = "bg-danger"; break;
                                default: statusText = o.status; badgeClass = "bg-secondary"; break;
                            }
                        }
                        <span class="badge @badgeClass rounded-pill px-3">@statusText</span>
                    </td>
                    <td class="text-end fw-bold text-success">
                        @o.FinalAmount.ToString("N0") đ
                    </td>
                    <td class="text-center pe-4">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="OrderDetails" asp-route-id="@o.orderid" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>

                            @if (o.status == "Pending")
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal@(o.orderid)" title="Hủy đơn">
                                    <i class="fas fa-times"></i>
                                </button>
                            }

                            @if (o.status == "Shipped" || o.status == "Processing")
                            {
                                <form asp-action="ConfirmReceived" asp-route-orderid="@o.orderid" method="post" onsubmit="return confirm('Xác nhận đã nhận được hàng?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Đã nhận hàng">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            }
                            
                            @if (o.status == "Delivered")
                            {
                                // Chỉ hiện nút đánh giá cho sản phẩm đầu tiên để demo, thực tế nên vào chi tiết để đánh giá từng món
                                <a asp-controller="Review" asp-action="Create" asp-route-productid="@o.orderdetails.FirstOrDefault()?.productid" class="btn btn-sm btn-outline-warning" title="Đánh giá">
                                    <i class="fas fa-star"></i>
                                </a>
                            }
                        </div>

                        @if (o.status == "Pending")
                        {
                            <div class="modal fade text-start" id="cancelModal@(o.orderid)" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <form asp-controller="Order" asp-action="CancelOrder" method="post">
                                            <input type="hidden" name="orderId" value="@o.orderid" />
                                            <input type="hidden" name="returnUrl" value="@Url.Action("MyOrders", "Home")" />
                                            @Html.AntiForgeryToken()
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Hủy đơn hàng #@o.ordercode</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc chắn muốn hủy đơn hàng này không?</p>
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Lý do hủy:</label>
                                                    <textarea class="form-control" name="cancelReason" rows="3" placeholder="Nhập lý do (không bắt buộc)..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-danger">Xác nhận hủy</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>