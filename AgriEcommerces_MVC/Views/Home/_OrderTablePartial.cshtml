@model List<AgriEcommerces_MVC.Models.order>
@{
    var tabName = ViewData["TabName"] as string ?? "default";
}

<div class="table-responsive bg-white shadow-sm rounded">
    <table class="table table-hover align-middle mb-0">
        <thead class="bg-primary text-white">
            <tr>
                <th class="ps-4 py-2">Mã đơn</th>
                <th class="text-center">Ngày đặt</th>
                <th class="text-center">Trạng thái</th>
                <th class="text-end">Tổng tiền</th>
                <th class="text-center pe-4">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td class="ps-4 fw-bold text-primary">#@o.ordercode</td>
                    <td class="text-center text-muted small">
                        @(o.orderdate?.ToString("dd/MM/yyyy HH:mm"))
                    </td>
                    <td class="text-center">
                        @{
                            var statusText = "";
                            var badgeClass = "";
                            switch (o.status)
                            {
                                case "Pending": statusText = "Chờ xác nhận"; badgeClass = "bg-warning text-black"; break;
                                case "Paid": statusText = "Đã thanh toán"; badgeClass = "bg-info text-black"; break;
                                case "Processing": statusText = "Đã duyệt"; badgeClass = "bg-primary text-black"; break;
                                case "Shipped": statusText = "Đang giao hàng"; badgeClass = "bg-info text-black"; break;
                                case "Delivered": statusText = "Giao thành công"; badgeClass = "bg-success text-black"; break;
                                case "Cancelled": statusText = "Đã hủy"; badgeClass = "bg-danger text-black"; break;
                                default: statusText = o.status; badgeClass = "bg-secondary text-black"; break;
                            }
                        }
                        <span class="badge @badgeClass rounded-pill px-3">@statusText</span>
                    </td>
                    <td class="text-end fw-bold text-success">
                        @o.FinalAmount.ToString("N0") đ
                    </td>
                    <td class="text-center pe-4">
                        <div class="d-flex justify-content-center gap-2">
                            <a asp-action="OrderDetails" asp-route-id="@o.orderid" class="btn btn-sm btn-outline-primary" title="Xem chi tiết">
                                <i class="fas fa-eye"></i>
                            </a>

                            @if (o.status == "Pending")
                            {
                                <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal@(o.orderid)_@tabName" title="Hủy đơn">
                                    <i class="fas fa-times"></i>
                                </button>
                            }

                            @if (o.status == "Shipped")
                            {
                                <form asp-action="ConfirmReceived" asp-route-orderid="@o.orderid" method="post" onsubmit="return confirm('Xác nhận đã nhận được hàng?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Đã nhận hàng">
                                        <i class="fas fa-check"></i>
                                    </button>
                                </form>
                            }

                            @using System.Security.Claims
                            @if (o.status == "Delivered")
                            {
                                @foreach (var detail in o.orderdetails)
                                {
                                    var currentUserId = int.Parse(User.FindFirst(ClaimTypes.NameIdentifier).Value);
                                    var hasReviewed = detail.product.reviews != null
                                    && detail.product.reviews.Any(r => r.customerid == currentUserId);

                                    @if (!hasReviewed)
                                    {
                                        <a asp-controller="Review"
                                           asp-action="Create"
                                           asp-route-productid="@detail.productid"
                                           class="btn btn-sm btn-outline-warning"
                                           title="Đánh giá sản phẩm: @detail.product.productname">
                                            <i class="fas fa-star"></i>
                                        </a>
                                    }
                                }
                            }
                        </div>

                        @if (o.status == "Pending")
                        {
                            <div class="modal fade text-start" id="cancelModal@(o.orderid)_@tabName" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <form asp-controller="Order" asp-action="CancelOrder" method="post">
                                            <input type="hidden" name="orderId" value="@o.orderid" />
                                            <input type="hidden" name="returnUrl" value="@Url.Action("MyOrders", "Home")" />
                                            @Html.AntiForgeryToken()
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Hủy đơn hàng #@o.ordercode</h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Bạn có chắc chắn muốn hủy đơn hàng này không?</p>
                                                <div class="mb-3">
                                                    <label class="form-label fw-bold">Lý do hủy:</label>
                                                    <textarea class="form-control" name="cancelReason" rows="3" placeholder="Nhập lý do (không bắt buộc)..."></textarea>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                <button type="submit" class="btn btn-danger">Xác nhận hủy</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>