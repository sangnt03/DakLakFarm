@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow mt-5">
                <div class="card-body p-4">
                    <img src="~/images/logologin.png" alt="DL Farm Logo" class="mx-auto d-block mb-3" style="max-width: 250px;" />
                    <h3 class="card-title text-center mb-4">Đăng nhập</h3>
                    <form asp-action="Login" method="post">

                        <div class="form-floating mb-3">
                            <input asp-for="email" class="form-control" placeholder="name@example.com" />
                            <label asp-for="email">Email</label>
                            <span asp-validation-for="email" class="text-danger small"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <input asp-for="password" class="form-control" placeholder="Mật khẩu" type="password" />
                            <label asp-for="password">Mật khẩu</label>
                            <span asp-validation-for="password" class="text-danger small"></span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.ReturnUrl))
                        {
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                        }
                        <div class="cf-turnstile mb-3"
                             data-sitekey="0x4AAAAAAB9xaHK9dVpPJWxh"
                             data-theme="light">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2">Đăng nhập</button>

                    </form>
                    <hr />
                    <h6 class="text-center small mb-3">Hoặc đăng nhập với</h6>
                    <form asp-action="ExternalLogin" method="post"
                          asp-route-returnUrl="@Model.ReturnUrl">
                        <input type="hidden" name="provider" value="Google" />
                        <button type="submit" class="btn btn-outline-danger w-100 d-flex align-items-center justify-content-center gap-2 py-2">
                            <svg width="18" height="18" viewBox="0 0 18 18" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17.64 9.2c0-.637-.057-1.251-.164-1.84H9v3.481h4.844c-.209 1.125-.843 2.078-1.796 2.717v2.258h2.908c1.702-1.567 2.684-3.874 2.684-6.615z" fill="#4285F4" />
                                <path d="M9.003 18c2.43 0 4.467-.806 5.956-2.18l-2.908-2.259c-.806.54-1.837.86-3.048.86-2.344 0-4.328-1.584-5.036-3.711H.96v2.332C2.44 15.983 5.485 18 9.003 18z" fill="#34A853" />
                                <path d="M3.964 10.71c-.18-.54-.282-1.117-.282-1.71s.102-1.17.282-1.71V4.958H.957C.347 6.173 0 7.548 0 9s.348 2.827.957 4.042l3.007-2.332z" fill="#FBBC05" />
                                <path d="M9.003 3.58c1.321 0 2.508.454 3.44 1.345l2.582-2.58C13.464.891 11.426 0 9.003 0 5.485 0 2.44 2.017.96 4.958L3.967 7.29c.708-2.127 2.692-3.71 5.036-3.71z" fill="#EA4335" />
                            </svg>
                            <span>Đăng nhập với Google</span>
                        </button>
                    </form>
                    <div class="text-center mt-3">
                        <p>Chưa có tài khoản? <a asp-action="Register" class="link-primary"> Đăng ký</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_Scripts")
}
@section Styles {
    <style>
        /* Ẩn khi không có lỗi */
        .validation-summary-valid {
            display: none;
        }
        /* Hiển thị khi có lỗi */
        .validation-summary-errors {
            display: block;
        }

        .text-danger {
            color: red !important; 
        }

    </style>
}