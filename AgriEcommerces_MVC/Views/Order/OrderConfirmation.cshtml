@model AgriEcommerces_MVC.Models.order
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var payment = Model.Payments?.FirstOrDefault();
}

<div class="container py-5" id="order-container">
    <div class="row justify-content-center">
        <div class="col-lg-8" id="printable-area">

            <div class="d-none d-print-block text-center mb-3">
                <h3 class="fw-bold">DakLakFarm</h3>
                <p class="mb-1">Địa chỉ: 06 Trần Văn Ơn, Phường Phú Lợi, TP. Hồ Chí Minh</p>
                <p>Hotline: 0999999999</p>
                <hr />
                <h4>HÓA ĐƠN BÁN HÀNG</h4>
            </div>

            <div class="no-print mb-4">
                @if (Model.status == "Paid")
                {
                    <div class="alert alert-success text-center">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <h4>Thanh toán thành công!</h4>
                        <p class="mb-0">Đơn hàng <strong>@Model.ordercode</strong> đã được thanh toán.</p>
                    </div>
                }
                else if (Model.status == "Pending")
                {
                    if (payment != null && payment.PaymentMethod == "COD")
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-clipboard-check fa-3x mb-3"></i>
                            <h4>Đang chờ duyệt (COD)</h4>
                            <p class="mb-0">Đơn hàng <strong>@Model.ordercode</strong> đã được ghi nhận.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-hourglass-half fa-3x mb-3"></i>
                            <h4>Chờ thanh toán</h4>
                            <p class="mb-0">Đơn hàng <strong>@Model.ordercode</strong> đang chờ thanh toán.</p>

                            <div class="alert alert-light border-warning mt-3 text-dark">
                                <i class="fas fa-exclamation-triangle text-warning"></i>
                                <strong>Lưu ý:</strong> Đơn hàng sẽ hủy sau 5 phút nếu chưa thanh toán.
                            </div>

                            <a asp-controller="Payment" asp-action="CreatePayment" asp-route-orderId="@Model.orderid"
                               class="btn btn-primary mt-2">
                                <i class="fas fa-credit-card"></i> Thanh toán ngay
                            </a>
                        </div>
                    }
                }
                else if (Model.status == "Đã hủy")
                {
                    <div class="alert alert-danger text-center">
                        <i class="fas fa-times-circle fa-3x mb-3"></i>
                        <h4>Đơn hàng đã bị hủy</h4>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">
                        <i class="fas fa-info-circle fa-3x mb-3"></i>
                        <h4>Trạng thái: @Model.status</h4>
                    </div>
                }
            </div>

            <div class="card shadow-sm mb-3 print-compact">
                <div class="card-header bg-success text-white d-print-none">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Thông tin khách hàng</h5>
                </div>
                <div class="card-header d-none d-print-block border-bottom py-1">
                    <h6 class="mb-0 fw-bold">THÔNG TIN KHÁCH HÀNG</h6>
                </div>

                <div class="card-body py-2">
                    <div class="row">
                        <div class="col-6 mb-1">
                            <strong>Mã đơn:</strong> @Model.ordercode
                        </div>
                        <div class="col-6 mb-1">
                            <strong>Ngày đặt:</strong> @Model.orderdate?.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-6 mb-1">
                            <strong>Khách hàng:</strong> @Model.customername
                        </div>
                        <div class="col-6 mb-1">
                            <strong>SĐT:</strong> @Model.customerphone
                        </div>
                        <div class="col-12 mb-1">
                            <strong>Địa chỉ:</strong> @Model.shippingaddress
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-3 print-compact">
                <div class="card-header bg-info text-white d-print-none">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Chi tiết đơn hàng</h5>
                </div>
                <div class="card-header d-none d-print-block border-bottom py-1">
                    <h6 class="mb-0 fw-bold">CHI TIẾT ĐƠN HÀNG</h6>
                </div>

                <div class="card-body py-2">
                    <div class="table-responsive">
                        <table class="table table-hover table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center" style="width: 50px;">SL</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var detail in Model.orderdetails)
                                {
                                    <tr>
                                        <td>
                                            <strong>@detail.product.productname</strong>
                                        </td>
                                        <td class="text-center">@detail.quantity</td>
                                        <td class="text-end">@detail.unitprice.ToString("N0")</td>
                                        <td class="text-end"><strong>@detail.SumPrice.ToString("N0")</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end">Tạm tính:</td>
                                    <td class="text-end">@Model.totalamount.ToString("N0")</td>
                                </tr>
                                @if (Model.discountamount > 0)
                                {
                                    <tr>
                                        <td colspan="3" class="text-end">
                                            Giảm giá @(!string.IsNullOrEmpty(Model.PromotionCode) ? $"({Model.PromotionCode})" : ""):
                                        </td>
                                        <td class="text-end">-@Model.discountamount.ToString("N0")</td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="3" class="text-end fw-bold">TỔNG THANH TOÁN:</td>
                                    <td class="text-end fw-bold" style="-webkit-text-fill-color:orange">@Model.FinalAmount.ToString("N0") VNĐ</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            @if (payment != null)
            {
                <div class="card shadow-sm mb-3 print-compact">
                    <div class="card-header bg-primary text-white d-print-none">
                        <h5 class="mb-0"><i class="fas fa-credit-card"></i> Lịch sử thanh toán</h5>
                    </div>
                    <div class="card-header d-none d-print-block border-bottom py-1">
                        <h6 class="mb-0 fw-bold">THÔNG TIN THANH TOÁN</h6>
                    </div>
                    <div class="card-body py-2">
                        <div class="row">
                            <div class="col-6 mb-1">
                                <strong>Phương thức:</strong> @payment.PaymentMethod
                            </div>
                            <div class="col-6 mb-1">
                                <strong>Trạng thái:</strong> @payment.Status
                            </div>
                            <div class="col-12 mb-1">
                                <strong>Thời gian:</strong>
                                @{
                                    // // Lấy giờ gốc từ dữ liệu (đang bị hiểu là UTC: 14:37)
                                    DateTime rawTime = payment.CreateDate;

                                    // // Chuyển đổi sang giờ Việt Nam (Cộng 7 tiếng)
                                    // // Cách 1: Cộng thủ công (Nhanh, hiệu quả nếu server cố định)
                                    DateTime vnTime = rawTime.AddHours(7);

                                    // // Cách 2 (Chuẩn hơn): Dùng TimeZoneInfo (nếu bạn muốn code chặt chẽ)
                                    // /*
                                    try {
                                    var timeZone = TimeZoneInfo.FindSystemTimeZoneById("SE Asia Standard Time"); // Windows
                                    vnTime = TimeZoneInfo.ConvertTimeFromUtc(rawTime, timeZone);
                                    } catch {
                                    // Fallback cho Linux/Docker nếu không tìm thấy ID trên
                                    vnTime = rawTime.AddHours(7);
                                    }
                                    
                                }
                                @vnTime.ToString("dd/MM/yyyy HH:mm:ss")
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="d-none d-print-block text-center mt-4">
                <p class="mb-0">Cảm ơn quý khách đã mua hàng!</p>
              
            </div>
        </div>
    </div>

    <div class="row justify-content-center no-print mt-4">
        <div class="col-lg-8 text-center">
            <div class="d-flex justify-content-center gap-2">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                </a>

                @* Chỉ hiện nút Thanh toán ngay nếu là Pending VÀ KHÔNG PHẢI COD *@
                @if (Model.status == "Pending" && (payment == null || payment.PaymentMethod != "COD"))
                {
                    <a asp-controller="Payment" asp-action="CreatePayment" asp-route-orderId="@Model.orderid"
                       class="btn btn-outline-success">
                        <i class="fas fa-credit-card"></i> Thanh toán ngay
                    </a>
                }

                @* Nút In *@
                <button onclick="window.print()" class="btn btn-outline-info">
                    <i class="fas fa-print"></i> In hóa đơn
                </button>

                @* Nút Hủy *@
                @if (Model.status == "Pending" || Model.status == "Chờ duyệt")
                {
                    <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                        <i class="fas fa-times"></i> Hủy đơn
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@if (Model.status == "Pending" || Model.status == "Chờ duyệt")
{
    <div class="modal fade no-print" id="cancelModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="CancelOrder" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="orderId" value="@Model.orderid" />
                    <input type="hidden" name="returnUrl" value="@Url.Action("OrderConfirmation", new { orderId = Model.orderid })" />

                    <div class="modal-header bg-danger text-white">
                        <h5 class="modal-title">Hủy đơn hàng</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn có chắc muốn hủy đơn hàng <strong>@Model.ordercode</strong>?</p>
                        <div class="mb-3">
                            <label class="form-label">Lý do hủy (tùy chọn)</label>
                            <textarea name="cancelReason" class="form-control" rows="3"
                                  placeholder="Nhập lý do hủy đơn..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-check"></i> Xác nhận hủy
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Styles {
    <style>
        /* --- CSS DÀNH RIÊNG CHO CHẾ ĐỘ IN (PRINT) --- */
        @@media print {
            @@page {
                size: A4;
                margin-left: 30mm; /* Căn lề giấy 10mm đều các bên */
            }

            /* 1. Ẩn toàn bộ web */
            body * {
                visibility: hidden;
            }
            
            /* 2. Ẩn các thành phần thừa */
            header, footer, nav, .no-print, .modal, .alert {
                display: none !important;
            }

            /* 3. Hiện vùng in */
            #order-container, #printable-area, #printable-area * {
                visibility: visible;
            }

            /* 4. Định vị lại vùng in về góc trang */
            #order-container {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%; /* Chiếm toàn bộ chiều ngang */
                margin: 0;
                padding: 0;
            }

            /* --- [SỬA LỖI CĂN GIỮA TẠI ĐÂY] --- */
            /* Reset cột col-lg-8 của Bootstrap để nó bung full trang giấy */
            #printable-area {
                width: 100% !important;
                max-width: 100% !important;
                flex: 0 0 100% !important;
                margin: 0 !important; /* Margin đã được xử lý bởi
            }
            
            /* Tắt flexbox của dòng (row) để tránh xung đột căn chỉnh */
            .row {
                display: block !important; 
                margin: 0 !important;
            }
            /* ---------------------------------- */

            /* 5. Thu nhỏ nội dung để vừa vặn đẹp hơn */
            #printable-area {
                font-size: 12pt; 
            }

            /* 6. Tinh chỉnh Card (Khung viền) */
            .card {
                border: 1px solid #000 !important;
                margin-bottom: 15px !important;
                width: 100% !important; /* Đảm bảo khung viền rộng 100% */
            }
            
            .card-header, .card-body {
                padding: 8px 15px !important;
            }

            /* 7. Màu sắc khi in */
            .bg-success, .bg-primary, .bg-info, .bg-danger, .badge {
                -webkit-print-color-adjust: exact !important;
                print-color-adjust: exact !important;
                color: black !important;
                background-color: #f0f0f0 !important;
            }
            
            /* 8. Font chữ */
            body {
                font-family: "Times New Roman", Times, serif;
                color: #000;
            }
            
            a {
                text-decoration: none !important;
                color: #000 !important;
            }
            
            /* Ẩn link URL hiển thị ở chân trang (nếu trình duyệt hỗ trợ) */
            a[href]:after {
                content: none !important;
            }
        }
    </style>
}