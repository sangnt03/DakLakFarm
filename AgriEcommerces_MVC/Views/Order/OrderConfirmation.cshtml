@model AgriEcommerces_MVC.Models.order
@{
    ViewData["Title"] = "Xác nhận đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <!-- Success Alert -->
            <div class="alert alert-success text-center shadow-sm">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h3 class="mb-2">🎉 Đặt hàng thành công!</h3>
                <p class="mb-0">Đơn hàng của bạn đã được tiếp nhận và đang chờ xử lý.</p>
            </div>

            <!-- Order Code Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-body text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <p class="text-white mb-2">Mã đơn hàng của bạn</p>
                    <h2 class="text-white mb-0" style="font-family: 'Courier New', monospace; letter-spacing: 2px;">
                        <i class="fas fa-barcode"></i> @Model.ordercode
                    </h2>
                    <small class="text-white-50">Vui lòng lưu lại mã này để tra cứu đơn hàng</small>
                </div>
            </div>

            <!-- Order Information -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Thông tin đơn hàng</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <strong><i class="fas fa-hashtag text-muted"></i> Mã đơn hàng:</strong>
                            <p class="mb-0">@Model.ordercode</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="fas fa-calendar-alt text-muted"></i> Ngày đặt:</strong>
                            <p class="mb-0">@Model.orderdate?.ToString("dd/MM/yyyy HH:mm")</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="fas fa-user text-muted"></i> Người nhận:</strong>
                            <p class="mb-0">@Model.customername</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <strong><i class="fas fa-phone text-muted"></i> Số điện thoại:</strong>
                            <p class="mb-0">@Model.customerphone</p>
                        </div>
                        <div class="col-12 mb-3">
                            <strong><i class="fas fa-map-marker-alt text-muted"></i> Địa chỉ giao hàng:</strong>
                            <p class="mb-0">@Model.shippingaddress</p>
                        </div>
                        <div class="col-12">
                            <strong><i class="fas fa-clock text-muted"></i> Trạng thái:</strong>
                            <span class="badge bg-warning text-dark">@Model.status</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Order Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-basket"></i> Chi tiết đơn hàng</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Sản phẩm</th>
                                    <th class="text-center">Số lượng</th>
                                    <th class="text-end">Đơn giá</th>
                                    <th class="text-end">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.orderdetails)
                                {
                                    <tr>
                                        <td>
                                            <strong>@item.product.productname</strong>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-secondary">@item.quantity</span>
                                        </td>
                                        <td class="text-end">@item.unitprice.ToString("N0") VNĐ</td>
                                        <td class="text-end"><strong>@item.SumPrice.ToString("N0") VNĐ</strong></td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot style="border-top: 2px solid #dee2e6;">
                                <tr>
                                    <th colspan="3" class="text-end">Tạm tính:</th>
                                    <td class="text-end">@Model.totalamount.ToString("N0") VNĐ</td>
                                </tr>

                                @if (Model.discountamount > 0)
                                {
                                    <tr class="table-success">
                                        <th colspan="3" class="text-end">
                                            <i class="fas fa-tag"></i> Giảm giá (@Model.PromotionCode):
                                        </th>
                                        <td class="text-end text-success">
                                            <strong>-@Model.discountamount.ToString("N0") VNĐ</strong>
                                        </td>
                                    </tr>
                                }

                                <tr style="background: #f8f9fa; border-top: 2px solid #000;">
                                    <th colspan="3" class="text-end h5 mb-0">
                                        <i class="fas fa-money-bill-wave"></i> Tổng cộng:
                                    </th>
                                    <th class="text-end h4 mb-0" style="-webkit-text-fill-color:orange">
                                        @Model.FinalAmount.ToString("N0") VNĐ
                                    </th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Additional Info -->
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> Lưu ý:</h6>
                <ul class="mb-0">
                    <li>Thông tin đơn hàng đã được gửi đến địa chỉ email của bạn</li>
                    <li>Đơn hàng sẽ được xử lý và gửi đi trong vòng 3-4 ngày làm việc</li>
                    <li>Bạn có thể tra cứu đơn hàng bằng mã: <strong>@Model.ordercode</strong></li>
                    <li>Nếu có thắc mắc, vui lòng liên hệ hotline: <strong>09999999999</strong></li>
                </ul>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex gap-2 justify-content-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                    <i class="fas fa-shopping-cart"></i> Tiếp tục mua sắm
                </a>
                <a asp-controller="Home" asp-action="MyOrders" class="btn btn-outline-secondary btn-lg">
                    <i class="fas fa-list"></i> Đơn hàng của tôi
                </a>
                <button onclick="window.print()" class="btn btn-outline-info btn-lg">
                    <i class="fas fa-print"></i> In đơn hàng
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    @@media print {
        .btn, .alert-info, nav, footer {
            display: none !important;
        }
    }
</style>