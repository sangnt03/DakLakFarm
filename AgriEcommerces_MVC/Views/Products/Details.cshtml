@model AgriEcommerces_MVC.Models.product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // Lấy thumbnail hình đầu tiên (nếu có)
    var imgRaw = Model.productimages.FirstOrDefault()?.imageurl;
    var thumb = !string.IsNullOrEmpty(imgRaw)
        ? Url.Content(imgRaw)
        : Url.Content("~/images/products/banana.png");
}

<!-- Thêm Font Awesome để hiển thị icon ngôi sao -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
@if (TempData["Success"] != null)
{
    <script>
        var message = "Đánh giá của bạn đã được gửi thành công!";
        alert(message);
    </script>


}
<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@thumb" class="img-fluid rounded" alt="@Model.productname">
        </div>
        <div class="col-md-6">
            <h2 class="mb-4">@Model.productname</h2>
            <h5 class="text-success mb-3">@Model.price.ToString("N0") VNĐ/@Model.unit</h5>

            <p><strong>Mô tả:</strong> @Model.description</p>

            @if (Model.category != null)
            {
                <p><strong>Danh mục:</strong> @Model.category.categoryname</p>
            }
            @* <p><strong>Shop:</strong> @Model.user.fullname.T</p> *@
            <div class="d-flex align-items-center quantity-wrapper mb-3">
                <button type="button" class="btn btn-outline-secondary me-2 qty-btn" data-type="minus">−</button>
                <input type="text" class="form-control text-center input-number" value="1" readonly style="width:60px;" />
                <button type="button" class="btn btn-outline-secondary ms-2 qty-btn" data-type="plus">+</button>
            </div>

            <button class="btn btn-primary add-to-cart-btn" data-id="@Model.productid">
                Add to Cart
            </button>

            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary ms-2">
                Quay lại
            </a>
        </div>
    </div>

   
    <!-- Phần hiển thị ĐÁNH GIÁ (Reviews) -->
    
    <div class="row mt-5">
        <div class="col-12">
            <div class="reviews-section">
                <div class="section-header mb-4">
                    <h3 class="section-title">
                        <i class="fas fa-star-half-alt me-2"></i>
                        Đánh giá sản phẩm
                    </h3>
                    <div class="reviews-summary">
                        @if (Model.reviews != null && Model.reviews.Any())
                        {
                            <span class="total-reviews">@Model.reviews.Count() đánh giá</span>
                        }
                    </div>
                </div>

                @if (Model.reviews == null || !Model.reviews.Any())
                {
                    <div class="no-reviews-container">
                        <div class="no-reviews-content">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted mb-2">Chưa có đánh giá nào</h5>
                            <p class="text-muted">Hãy là người đầu tiên đánh giá sản phẩm này!</p>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Hiển thị danh sách đánh giá -->
                    <div class="reviews-container">
                        @foreach (var review in Model.reviews.OrderByDescending(r => r.createdat))
                        {
                            <div class="review-card">
                                <div class="review-header">
                                    <div class="reviewer-info">
                                        <div class="reviewer-avatar">
                                            @if (review.customer != null && !string.IsNullOrEmpty(review.customer.fullname))
                                            {
                                                <span class="avatar-text">@review.customer.fullname.Substring(0, 1).ToUpper()</span>
                                            }
                                            else
                                            {
                                                <i class="fas fa-user"></i>
                                            }
                                        </div>
                                        <div class="reviewer-details">
                                            <h6 class="reviewer-name">
                                                @if (review.customer != null && !string.IsNullOrEmpty(review.customer.fullname))
                                                {
                                                    @review.customer.fullname
                                                }
                                                else
                                                {
                                                    <span>Khách hàng</span>
                                                }
                                            </h6>
                                            <small class="review-date">
                                                <i class="far fa-clock me-1"></i>
                                                @review.createdat?.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                    </div>

                                    <div class="rating-section">
                                        <div class="star-rating">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= review.rating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                        </div>
                                        <span class="rating-text">@review.rating/5</span>
                                    </div>
                                </div>

                                <div class="review-content">
                                    @if (!string.IsNullOrEmpty(review.comment))
                                    {
                                        <p class="comment-text">@review.comment</p>
                                    }
                                    else
                                    {
                                        <p class="comment-text no-comment">
                                            <i class="fas fa-quote-left me-2"></i>
                                            Khách hàng chưa để lại bình luận
                                        </p>
                                    }
                                </div>

                                <div class="review-actions">
                                    <button class="action-btn helpful-btn">
                                        <i class="fas fa-thumbs-up me-1"></i>
                                        Hữu ích
                                    </button>
                                    <button class="action-btn reply-btn">
                                        <i class="fas fa-reply me-1"></i>
                                        Trả lời
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    @section Styles {
        <style>
            /* Reviews Section Styles */
            .reviews-section {
                background: linear-gradient(135deg, #fefdf8 0%, #ffffff 100%);
                border-radius: 16px;
                padding: 2rem;
                box-shadow: 0 4px 20px rgba(218, 165, 32, 0.1);
                border: 1px solid rgba(255, 193, 7, 0.2);
            }

            .section-header {
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding-bottom: 1rem;
                border-bottom: 2px solid rgba(255, 193, 7, 0.2);
            }

            .section-title {
                color: #b8860b;
                font-weight: 700;
                margin: 0;
                font-size: 1.5rem;
            }

            .reviews-summary .total-reviews {
                background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
                color: #6d4c00;
                padding: 0.5rem 1rem;
                border-radius: 20px;
                font-size: 0.875rem;
                font-weight: 600;
            }

            /* No Reviews State */
            .no-reviews-container {
                text-align: center;
                padding: 3rem 1rem;
                background: rgba(255, 248, 220, 0.5);
                border-radius: 12px;
                border: 2px dashed #f4d03f;
            }

            .no-reviews-content i {
                opacity: 0.6;
                color: #daa520;
            }

            /* Reviews Container */
            .reviews-container {
                max-height: 600px;
                overflow-y: auto;
                padding-right: 0.5rem;
            }

                .reviews-container::-webkit-scrollbar {
                    width: 6px;
                }

                .reviews-container::-webkit-scrollbar-track {
                    background: rgba(255, 193, 7, 0.1);
                    border-radius: 10px;
                }

                .reviews-container::-webkit-scrollbar-thumb {
                    background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
                    border-radius: 10px;
                }

            /* Review Card */
            .review-card {
                background: white;
                border-radius: 12px;
                padding: 1.5rem;
                margin-bottom: 1rem;
                box-shadow: 0 2px 12px rgba(218, 165, 32, 0.1);
                border: 1px solid rgba(255, 193, 7, 0.15);
                transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
                position: relative;
                overflow: hidden;
            }

                .review-card::before {
                    content: '';
                    position: absolute;
                    top: 0;
                    left: 0;
                    right: 0;
                    height: 3px;
                    background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
                }

                .review-card:hover {
                    transform: translateY(-4px);
                    box-shadow: 0 8px 25px rgba(255, 193, 7, 0.2);
                }

            /* Review Header */
            .review-header {
                display: flex;
                justify-content: space-between;
                align-items: flex-start;
                margin-bottom: 1rem;
            }

            .reviewer-info {
                display: flex;
                align-items: center;
                gap: 0.75rem;
            }

            .reviewer-avatar {
                width: 45px;
                height: 45px;
                border-radius: 50%;
                background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
                display: flex;
                align-items: center;
                justify-content: center;
                color: #6d4c00;
                font-weight: 600;
                font-size: 1.1rem;
                box-shadow: 0 4px 12px rgba(255, 193, 7, 0.3);
            }

            .reviewer-details {
                display: flex;
                flex-direction: column;
            }

            .reviewer-name {
                margin: 0;
                color: #1e293b;
                font-weight: 600;
                font-size: 1rem;
            }

            .review-date {
                color: #64748b;
                margin-top: 0.25rem;
            }

            /* Rating Section */
            .rating-section {
                display: flex;
                flex-direction: column;
                align-items: flex-end;
                gap: 0.25rem;
            }

            .star-rating {
                display: flex;
                gap: 2px;
            }

                .star-rating i {
                    font-size: 1.1rem;
                    transition: all 0.2s ease;
                }

                .star-rating .fas.fa-star {
                    color: #fbbf24;
                    text-shadow: 0 1px 3px rgba(251, 191, 36, 0.4);
                }

                .star-rating .far.fa-star {
                    color: #d1d5db;
                }

            .rating-text {
                font-size: 0.875rem;
                color: #64748b;
                font-weight: 600;
            }

            /* Review Content */
            .review-content {
                margin: 1rem 0;
            }

            .comment-text {
                color: #374151;
                line-height: 1.6;
                margin: 0;
                font-size: 0.95rem;
            }

                .comment-text.no-comment {
                    color: #9ca3af;
                    font-style: italic;
                }

            /* Review Actions */
            .review-actions {
                display: flex;
                gap: 0.75rem;
                padding-top: 1rem;
                border-top: 1px solid rgba(255, 193, 7, 0.2);
            }

            .action-btn {
                background: none;
                border: 1px solid rgba(255, 193, 7, 0.3);
                color: #b8860b;
                padding: 0.5rem 1rem;
                border-radius: 20px;
                font-size: 0.875rem;
                cursor: pointer;
                transition: all 0.3s ease;
                display: flex;
                align-items: center;
            }

                .action-btn:hover {
                    background: linear-gradient(135deg, #ffd700 0%, #daa520 100%);
                    color: #6d4c00;
                    border-color: transparent;
                    transform: translateY(-1px);
                }

            /* Mobile Responsive */
            @@media (max-width: 768px) {
                .reviews-section {
                    padding: 1rem;
                    margin: 0 -0.5rem;
                }

                .section-header {
                    flex-direction: column;
                    align-items: flex-start;
                    gap: 1rem;
                }

                .review-header {
                    flex-direction: column;
                    gap: 1rem;
                }

                .rating-section {
                    align-items: flex-start;
                }

                .review-actions {
                    flex-wrap: wrap;
                }

                .reviewer-avatar {
                    width: 40px;
                    height: 40px;
                    font-size: 1rem;
                }
            }

            /* Animation for new reviews */
            @@keyframes slideInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .review-card {
                animation: slideInUp 0.5s ease-out;
            }
        </style>
    }

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            document.body.addEventListener('click', async e => {
                const minusOrPlus = e.target.closest('button[data-type]');
                const addBtn = e.target.closest('.add-to-cart-btn');

                // 1) Xử lý + / − trong product detail
                if (minusOrPlus && minusOrPlus.classList.contains('qty-btn')) {
                    e.preventDefault();
                    const wrapper = minusOrPlus.closest('.quantity-wrapper');
                    const input = wrapper.querySelector('input.input-number');
                    let v = parseInt(input.value, 10) || 0;
                    if (minusOrPlus.getAttribute('data-type') === 'plus') v++;
                    else if (v > 1) v--;
                    input.value = v < 1 ? 1 : v;
                    return;
                }

                // 2) Xử lý Add to Cart
                if (addBtn) {
                    e.preventDefault();
                    const id = addBtn.getAttribute('data-id');
                    const wrapper = addBtn.closest('.col-md-6');
                    const input = wrapper.querySelector('.quantity-wrapper input.input-number');
                    let qty = parseInt(input.value, 10);
                    if (isNaN(qty) || qty < 1) qty = 1;

                    const url = '@Url.Action("AddAjax", "Cart")';
                    const resp = await fetch(`${url}?id=${id}&qty=${qty}`);
                    if (!resp.ok) return console.error('AddAjax lỗi', resp.status);
                    const html = await resp.text();

                    document.getElementById('offcanvasCartBody').innerHTML = html;
                    new bootstrap.Offcanvas(document.getElementById('offcanvasCart')).show();
                    return;
                }

                // 3) Các nút trong offcanvas (qty-btn, remove-btn)
                const qtyBtnOffcanvas = e.target.closest('.qty-btn');
                if (qtyBtnOffcanvas) {
                    e.preventDefault();
                    const id = qtyBtnOffcanvas.getAttribute('data-id');
                    const action = qtyBtnOffcanvas.getAttribute('data-action');
                    const li = qtyBtnOffcanvas.closest('li');
                    const span = li.querySelector('.qty-value');
                    let qty = parseInt(span.textContent, 10) || 0;
                    qty = (action === 'plus' ? qty + 1 : qty - 1);
                    if (qty < 0) qty = 0;

                    const updateUrl = '@Url.Action("UpdateAjax", "Cart")';
                    const r2 = await fetch(`${updateUrl}?id=${id}&qty=${qty}`);
                    const h2 = await r2.text();
                    document.getElementById('offcanvasCartBody').innerHTML = h2;
                    return;
                }

                const remBtn = e.target.closest('.remove-btn');
                if (remBtn) {
                    e.preventDefault();
                    const id = remBtn.getAttribute('data-id');
                    const updateUrl = '@Url.Action("UpdateAjax", "Cart")';
                    const r3 = await fetch(`${updateUrl}?id=${id}&qty=0`);
                    const h3 = await r3.text();
                    document.getElementById('offcanvasCartBody').innerHTML = h3;
                }
            });
        });
    </script>
}
